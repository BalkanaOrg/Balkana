@model TeamFormModel
@{
}
<div class="col-lg-6 offset-lg-3 col-sm-12 col-xl-6">
    <h2 class="text-center">Add a team</h2>
    <form method="post">

        <div class="form-group">
            <label asp-for="FullName">Team's full name</label>
            <input asp-for="FullName" class="form-control" placeholder="e.g. Unicorns of Love">
            <span asp-validation-for="FullName" class="small text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Tag">Team's tag</label>
            <input asp-for="Tag" class="form-control" placeholder="e.g. UOL">
            <span asp-validation-for="Tag" class="small text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="LogoURL"></label>
            <input asp-for="LogoURL" class="form-control" placeholder="Your URL here..">
            <span asp-validation-for="LogoURL" class="small text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="YearFounded"></label>
            <input asp-for="YearFounded" class="form-control" placeholder="Year Founded">
            <span asp-validation-for="YearFounded" class="small text-danger"></span>
        </div>

        <div class="form-group text-black">
            <label asp-for="GameId">Region</label>
            <select asp-for="GameId" class="form-control">
                <option disabled>Games</option>
                @foreach (var region in Model.CategoriesGames)
                {
                    <option value="@region.Id">@region.Tag</option>
                }
            </select>
        </div>
        <span asp-validation-for="LogoURL" class="small text-danger"></span>

        <input class="btn btn-dark float-right" type="submit" value="Save" />
    </form>

</div>