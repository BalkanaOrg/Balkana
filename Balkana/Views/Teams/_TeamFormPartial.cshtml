@model TeamFormModel
@{
}
<div class="col-lg-6 offset-lg-3 col-sm-12 col-xl-6">
    <h2 class="text-center">Add a team</h2>
    <form method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="FullName"></label>
            <input asp-for="FullName" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Tag"></label>
            <input asp-for="Tag" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="LogoFile"></label>
            <input asp-for="LogoFile" type="file" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="YearFounded"></label>
            <input asp-for="YearFounded" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="GameId"></label>
            <select asp-for="GameId" class="form-control">
                <option disabled selected>Choose Game</option>
                @foreach (var game in Model.CategoriesGames)
                {
                    <option value="@game.Id">@game.ShortName</option>
                }
            </select>
        </div>

        <button type="submit" class="btn btn-dark">Save</button>
    </form>

</div>