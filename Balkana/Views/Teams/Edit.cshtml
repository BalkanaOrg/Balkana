@model Balkana.Services.Teams.Models.TeamFormModel

@{
    ViewData["Title"] = "Edit Team";
}

<h2>Edit Team</h2>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <input type="hidden" asp-for="LogoPath" />

    <div class="form-group mb-3">
        <label asp-for="FullName" class="form-label"></label>
        <input asp-for="FullName" class="form-control" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Tag" class="form-label"></label>
        <input asp-for="Tag" class="form-control" />
        <span asp-validation-for="Tag" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="YearFounded" class="form-label"></label>
        <input asp-for="YearFounded" class="form-control" type="number" />
        <span asp-validation-for="YearFounded" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="GameId" class="form-label"></label>
        <select asp-for="GameId" class="form-control"
                asp-items="@(new SelectList(Model.CategoriesGames, "Id", "FullName"))">
            <option value="">-- Select Game --</option>
        </select>
        <span asp-validation-for="GameId" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="LogoFile" class="form-label">Team Logo</label>

        @if (!string.IsNullOrEmpty(Model.LogoPath))
        {
            <div class="mb-2">
                <img src="@Model.LogoPath" alt="Current Logo" style="max-height:150px; border:1px solid #ccc;" />
            </div>
        }

        <input asp-for="LogoFile" type="file" class="form-control" />
        <span asp-validation-for="LogoFile" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
