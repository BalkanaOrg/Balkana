@model IEnumerable<TeamServiceModel>
@{
    int accordionCount = 0;
}
@foreach (var team in Model)
{
    <div class="accordion-item bg-dark text-light border border-secondary">
        <h2 class="accordion-header">
            <button class="accordion-button collapsed bg-dark text-light"
                    type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#flush-collapse-@accordionCount"
                    aria-expanded="false"
                    aria-controls="flush-collapse-@accordionCount">
                <a asp-controller="Teams"
                   asp-action="Details"
                   asp-route-id="@team.Id"
                   asp-route-information="@team.GetInformation()"
                   class="d-flex align-items-center text-light text-decoration-none w-100">

                    <img class="card-img-top mw-50 me-2"
                         src="@team.LogoURL"
                         alt="[@team.Tag] @team.FullName"
                         style="width:40px; height:auto;">

                    <span class="fw-bold">@team.Tag</span>
                </a>
            </button>
        </h2>
        <div id="flush-collapse-@accordionCount"
             class="accordion-collapse collapse"
             data-bs-parent="#accordionFlushExample">
            <div class="accordion-body bg-secondary text-light">
                @if (team.Players != null && team.Players.Any())
                {
                    <div class="row row-cols-2 row-cols-sm-3 row-cols-md-5 g-3">
                        @foreach (var player in team.Players.Take(5))   // 👈 max 5 players
                        {
                            <div class="col text-center">
                                <img src="@player.PictureUrl"
                                     alt="@player.Nickname"
                                     class="rounded-circle mb-2 border border-light"
                                     style="width:80px; height:80px; object-fit:cover;" />
                                <div>
                                    <strong class="text-light">@player.Nickname</strong>
                                </div>
                                <div class="text-black small">
                                    @player.FirstName @player.LastName
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <span class="text-black">No players currently in this team.</span>
                }
            </div>
        </div>
    </div>
    accordionCount++;
}
