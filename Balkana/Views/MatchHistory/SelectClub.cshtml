@model List<SelectListItem>

@{
    ViewData["Title"] = "Select FaceIt Club";
}

<h2>Select FaceIt Club</h2>

<form asp-action="Index" asp-controller="MatchHistory" method="get">
    <input type="hidden" name="source" value="FACEIT" />

    <div class="form-group">
        <label for="clubId">FaceIt Club</label>
        <select name="clubId" class="form-control">
            <option value="">-- Select Club --</option>
            @foreach (var club in Model)
            {
                <option value="@club.Value">@club.Text</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Continue</button>
</form>