@{
    ViewData["Title"] = "Test Discord Commands";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card bg-dark text-white">
                <div class="card-header bg-gradient" style="background: linear-gradient(135deg, #1e40af, #dc2626);">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-play me-2"></i>
                        Test Discord Commands
                    </h3>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="card bg-dark border-secondary">
                                <div class="card-header">
                                    <h5 class="mb-0">
                                        <i class="fas fa-terminal me-2"></i>
                                        Command Tester
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <form method="post" id="testForm">
                                        <div class="mb-3">
                                            <label for="command" class="form-label">Command</label>
                                            <select class="form-select bg-dark text-white border-secondary" id="command" name="command" required>
                                                <option value="">Select a command...</option>
                                                <option value="team">/team</option>
                                                <option value="player">/player</option>
                                            </select>
                                        </div>
                                        
                                        <div class="mb-3">
                                            <label for="arguments" class="form-label">Arguments</label>
                                            <input type="text" class="form-control bg-dark text-white border-secondary" 
                                                   id="arguments" name="arguments" 
                                                   placeholder="e.g., TDI or ext1nct">
                                            <div class="form-text text-muted">
                                                Separate multiple arguments with spaces
                                            </div>
                                        </div>
                                        
                                        <div class="d-grid">
                                            <button type="submit" class="btn btn-primary">
                                                <i class="fas fa-play me-2"></i>
                                                Test Command
                                            </button>
                                        </div>
                                    </form>
                                    
                                    <div class="mt-4">
                                        <h6 class="text-info">Quick Examples:</h6>
                                        <div class="d-grid gap-2">
                                            <button class="btn btn-outline-secondary btn-sm" onclick="setCommand('team', 'TDI')">
                                                Test: /team TDI
                                            </button>
                                            <button class="btn btn-outline-secondary btn-sm" onclick="setCommand('player', 'ext1nct')">
                                                Test: /player ext1nct
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-6">
                            <div class="card bg-dark border-secondary">
                                <div class="card-header">
                                    <h5 class="mb-0">
                                        <i class="fas fa-eye me-2"></i>
                                        Command Result
                                    </h5>
                                </div>
                                <div class="card-body">
                                    @if (ViewBag.Response != null)
                                    {
                                        <div class="mb-3">
                                            <h6 class="text-info">Command:</h6>
                                            <code class="bg-dark text-warning p-2 rounded d-block">
                                                /@ViewBag.Command @ViewBag.Arguments
                                            </code>
                                        </div>
                                        
                                        <div class="mb-3">
                                            <h6 class="text-info">Status:</h6>
                                            @if (ViewBag.Response.Success)
                                            {
                                                <span class="badge bg-success">
                                                    <i class="fas fa-check me-1"></i>
                                                    Success
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">
                                                    <i class="fas fa-times me-1"></i>
                                                    Error
                                                </span>
                                            }
                                        </div>
                                        
                                        <div class="mb-3">
                                            <h6 class="text-info">Response:</h6>
                                            <div class="bg-dark border border-secondary p-3 rounded">
                                                <pre class="text-white mb-0" style="white-space: pre-wrap;">@ViewBag.Response.Message</pre>
                                            </div>
                                        </div>
                                        
                                        <div class="mt-3">
                                            <h6 class="text-info">JSON Response:</h6>
                                            <pre class="bg-dark text-success p-3 rounded" style="font-size: 0.8em;"><code>@Html.Raw(System.Text.Json.JsonSerializer.Serialize(ViewBag.Response, new System.Text.Json.JsonSerializerOptions { WriteIndented = true }))</code></pre>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="text-center text-muted">
                                            <i class="fas fa-info-circle fa-3x mb-3"></i>
                                            <p>Select a command and enter arguments to test it.</p>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
function setCommand(command, args) {
    document.getElementById('command').value = command;
    document.getElementById('arguments').value = args;
}

// Auto-submit form when both fields are filled
document.getElementById('command').addEventListener('change', checkForm);
document.getElementById('arguments').addEventListener('input', checkForm);

function checkForm() {
    const command = document.getElementById('command').value;
    const args = document.getElementById('arguments').value;
    
    if (command && args) {
        // Optional: Auto-submit after a short delay
        // setTimeout(() => document.getElementById('testForm').submit(), 1000);
    }
}
</script>

<style>
    .card {
        border-radius: 10px;
        box-shadow: 0 4px 16px rgba(0,0,0,0.3);
    }
    
    .card-header {
        border-radius: 10px 10px 0 0 !important;
    }
    
    .btn {
        border-radius: 8px;
        font-weight: 500;
    }
    
    .form-control, .form-select {
        border-radius: 6px;
    }
    
    .form-control:focus, .form-select:focus {
        border-color: #1e40af;
        box-shadow: 0 0 0 0.2rem rgba(30, 64, 175, 0.25);
    }
    
    code, pre {
        border-radius: 6px;
    }
    
    pre {
        white-space: pre-wrap;
        word-wrap: break-word;
    }
    
    .badge {
        font-size: 0.9em;
    }
</style>
