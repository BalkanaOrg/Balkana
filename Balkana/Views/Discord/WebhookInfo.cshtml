    .card {
        border-radius: 10px;
        box-shadow: 0 4px 16px rgba(0,0,0,0.3);
    }
    
    .card-header {
        border-radius: 10px 10px 0 0 !important;
    }
    
    .btn {
        border-radius: 8px;
        font-weight: 500;
    }
    
    .alert {
        border-radius: 8px;
    }
    
    code, pre {
        border-radius: 6px;
    }
    
    pre {
        white-space: pre-wrap;
        word-wrap: break-word;
    }
    
    .form-control:focus {
        border-color: #1e40af;
        box-shadow: 0 0 0 0.2rem rgba(30, 64, 175, 0.25);
    }
    
    .input-group .btn {
        border-radius: 0 6px 6px 0;
    }
</style>
