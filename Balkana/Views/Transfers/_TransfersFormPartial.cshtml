@using Balkana.Data.Models
@model TransferFormModel

<!-- jQuery (must come first) -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<!-- Select2 CSS -->
<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />

<!-- Select2 JS (must come AFTER jQuery) -->
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

<form method="post" asp-action="Add">
    <div class="form-group">
        <label for="GameId">Game</label>
        <select asp-for="GameId" id="GameId" class="form-control">
            @foreach (var g in Model.TransferGames)
            {
                <option value="@g.Id">@g.FullName</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="TeamId">Team</label>
        <select asp-for="TeamId" id="TeamId" class="form-control"></select>
    </div>

    <div class="form-group">
        <label for="PlayerId">Player</label>
        <select asp-for="PlayerId" id="PlayerId" class="form-control"></select>
    </div>

    <div class="form-group">
        <label for="PositionId">Position</label>
        <select asp-for="PositionId" id="PositionId" class="form-control"></select>
    </div>

    <div class="form-group">
        <label asp-for="StartDate">Start Date</label>
        <input asp-for="StartDate" class="form-control" type="datetime-local"
               value="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" />
    </div>

    <div class="form-group">
        <label asp-for="EndDate">End Date (optional)</label>
        <input asp-for="EndDate" class="form-control" type="datetime-local" />
    </div>

    <div class="form-group">
        <label asp-for="Status">Status</label>
        <select asp-for="Status" asp-items="Html.GetEnumSelectList<PlayerTeamStatus>()" class="form-control"></select>
    </div>

    <input class="btn btn-dark float-right" type="submit" value="Save" />
</form>

<script>
    $(document).ready(function () {

        // When a game is selected → reload Teams & Positions
        $("#GameId").change(function () {
            var gameId = $(this).val();

            // Load teams
            $.getJSON('/Transfers/GetTeams', { gameId: gameId }, function (data) {
                var $team = $("#TeamId");
                $team.empty();
                $.each(data, function (i, team) {
                    $team.append($('<option>', { value: team.id, text: team.fullName }));
                });
            });

            // Load positions
            $.getJSON('/Transfers/GetPositions', { gameId: gameId }, function (data) {
                var $pos = $("#PositionId");
                $pos.empty();
                $.each(data, function (i, pos) {
                    $pos.append($('<option>', { value: pos.id, text: pos.name }));
                });
            });
        });

        // Player dropdown with lazy loading & search
        $('#PlayerId').select2({
            placeholder: "Search players...",
            ajax: {
                url: '/Transfers/GetPlayers',
                data: function (params) {
                    return {
                        gameId: $("#GameId").val(),
                        search: params.term,   // search term from user
                        page: params.page || 1,
                        pageSize: 20
                    };
                },
                processResults: function (data, params) {
                    params.page = params.page || 1;

                    return {
                        results: $.map(data, function (p) {
                            return { id: p.id, text: p.nickname + " (" + p.fullName + ")" };
                        }),
                        pagination: {
                            more: data.length === 20 // assume more if we got full page
                        }
                    };
                }
            },
            minimumInputLength: 2
        });

        $('#TeamId').select2({
            placeholder: "Search teams...",
            ajax: {
                url: '/Transfers/GetTeams',
                data: function (params) {
                    return {
                        gameId: $("#GameId").val(),
                        search: params.term,   // search term from user
                        page: params.page || 1,
                        pageSize: 20
                    };
                },
                processResults: function (data, params) {
                    params.page = params.page || 1;

                    return {
                        results: $.map(data, function (p) {
                            return { id: p.id, text: p.fullName };
                        }),
                        pagination: {
                            more: data.length === 20 // assume more if we got full page
                        }
                    };
                }
            },
            minimumInputLength: 2
        });
        $("#GameId").trigger("change");
    });
</script>
