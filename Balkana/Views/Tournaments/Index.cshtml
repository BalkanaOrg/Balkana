@model IEnumerable<Balkana.Data.Models.Tournament>

@{
    ViewData["Title"] = "Tournaments";
}

<h2 class="mb-4">Tournaments</h2>

<div class="mb-3">
    <a asp-action="Add" class="btn btn-primary">Add New Tournament</a>
</div>

<div class="row g-3 bg-black text-white">
    @foreach (var t in Model)
    {
        <div class="col-md-4">
            <div class="card bg-dark text-white shadow-sm h-100">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@t.FullName</h5>
                    <p class="card-text text-truncate">@t.Description</p>

                    <p class="mb-1"><strong>Organizer:</strong> @t.Organizer?.FullName</p>
                    <p class="mb-1"><strong>Game:</strong> @t.Game?.FullName</p>
                    <p class="mb-1">
                        <strong>Dates:</strong>
                        @{
                            var startDate = t.StartDate.Date;
                            var endDate = t.EndDate.Date;
                            if (startDate == endDate)
                            {
                                @startDate.ToShortDateString()
                            }
                            else
                            {
                                @($"{startDate.ToShortDateString()} - {endDate.ToShortDateString()}")
                            }
                        }
                    </p>

                    @if (t.TournamentTeams != null && t.TournamentTeams.Any())
                    {
                        <div class="mt-2">
                            <strong>Teams:</strong>
                            <div class="d-flex flex-wrap gap-1 mt-1">
                                @foreach (var tt in t.TournamentTeams.OrderBy(tt => tt.Seed))
                                {
                                    <img src="@tt.Team.LogoURL"
                                         width="50px"
                                         height="50px"
                                         alt="@tt.Team.FullName"
                                         title="@tt.Team.FullName"
                                         class="rounded-circle border" />
                                }
                            </div>
                        </div>
                    }

                    <div class="mt-auto pt-3">
                        <a asp-action="Details" asp-route-id="@t.Id" class="btn btn-sm btn-primary w-100">View Tournament</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>