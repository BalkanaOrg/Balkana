@using System.Globalization
@model IEnumerable<Balkana.Data.Models.Tournament>

@{
    ViewData["Title"] = "Tournaments";
}

<link rel="stylesheet" href="~/css/tournamentIndex.css" />

<div class="tournament-container">
    <div class="tournament-header">
        <h2>Tournaments</h2>
        <a asp-action="Add" class="add-tournament-btn">Add New Tournament</a>
    </div>

    <div class="tournament-grid">
        @foreach (var t in Model)
        {
            <div class="tournament-card loading">
                @* Tournament Status Badge *@
                <div class="tournament-status @(DateTime.Now < t.StartDate ? "status-upcoming" :
                                         DateTime.Now > t.EndDate ? "status-completed" : "status-live")">
                    @(DateTime.Now < t.StartDate ? "Upcoming" :
                                    DateTime.Now > t.EndDate ? "Completed" : "Today")
            </div>

                <div class="tournament-image-container">
                    <img src="@t.BannerUrl" class="tournament-image" alt="@t.FullName" />
                </div>

                <div class="tournament-content">
                    <h3 class="tournament-title">@t.FullName</h3>
                    @* <p class="tournament-description">@t.Description</p> *@

                    <div class="tournament-details">
                        <div class="tournament-detail-item">
                            <span class="detail-label">Organizer:</span>
                            <span class="detail-value">
                                <a asp-controller="Organizers" asp-action="Details" asp-route-id="@t.OrganizerId" asp-route-information="@t.Organizer.GetInformation()" class="">
                                    <img src="@t.Organizer.LogoURL" width="15px" height="auto" /> @(t.Organizer?.FullName ?? "TBD")
                                </a>
                            </span>
                        </div>
                        <div class="tournament-detail-item">
                            <span class="detail-label">Game:</span>
                            <span class="detail-value">@(t.Game?.FullName ?? "TBD")</span>
                        </div>
                        <div class="tournament-detail-item">
                            <span class="detail-label">Prize Pool:</span>
                            <span class="tournament-price">@(t.PrizePool.ToString("C0", new CultureInfo("fr-FR")) ?? "TBD")</span>
                        </div>
                        <div class="tournament-detail-item">
                            <span class="detail-label">Dates:</span>
                            <span class="tournament-dates">
                                @{
                                    var startDate = t.StartDate.Date;
                                    var endDate = t.EndDate.Date;
                                    if (startDate == endDate)
                                    {
                                        @startDate.ToString("MMM dd, yyyy")
                                    }
                                    else
                                    {
                                        @($"{startDate.ToString("MMM dd")} - {endDate.ToString("MMM dd, yyyy")}")
                                    }
                                }
                            </span>
                        </div>
                    </div>

                    @if (t.TournamentTeams != null && t.TournamentTeams.Any())
                    {
                        <div class="tournament-teams">
                            <div class="teams-label">Participating Teams (@t.TournamentTeams.Count()):</div>
                            <div class="teams-grid">
                                @if (t.TournamentTeams.Count() > 8)
                                {
                                    @foreach (var tt in t.TournamentTeams.OrderBy(tt => tt.Seed).Take(7))
                                    {
                                        <a asp-controller="Teams"
                                           asp-action="Details"
                                           asp-route-id="@tt.Team.Id"
                                           asp-route-information="@tt.Team.GetInformation()"
                                           class="team-logo-link"
                                           title="@tt.Team.FullName">
                                            <img src="@tt.Team.LogoURL"
                                                 class="team-logo"
                                                 alt="@tt.Team.FullName" />
                                        </a>
                                    }
                                    <div class="team-more-container desktop-only">
                                        <button type="button" 
                                                class="team-logo team-more-btn" 
                                                data-tournament-id="@t.Id"
                                                title="Show remaining teams"
                                                style="display: flex; align-items: center; justify-content: center; background: rgba(255,255,255,0.2); font-size: 0.8rem;">
                                            +@(t.TournamentTeams.Count() - 7)
                                        </button>
                                        
                                        <div class="remaining-teams-popup" id="remaining-teams-@t.Id" style="display: none;">
                                            <div class="remaining-teams-content">
                                                <div class="remaining-teams-grid">
                                                    @foreach (var tt in t.TournamentTeams.OrderBy(tt => tt.Seed).Skip(7))
                                                    {
                                                        <a asp-controller="Teams"
                                                           asp-action="Details"
                                                           asp-route-id="@tt.Team.Id"
                                                           asp-route-information="@tt.Team.GetInformation()"
                                                           class="team-logo-link"
                                                           title="@tt.Team.FullName">
                                                            <img src="@tt.Team.LogoURL"
                                                                 class="team-logo"
                                                                 alt="@tt.Team.FullName" />
                                                        </a>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    @* Show remaining teams on mobile *@
                                    <div class="mobile-remaining-teams">
                                        @foreach (var tt in t.TournamentTeams.OrderBy(tt => tt.Seed).Skip(7))
                                        {
                                            <a asp-controller="Teams"
                                               asp-action="Details"
                                               asp-route-id="@tt.Team.Id"
                                               asp-route-information="@tt.Team.GetInformation()"
                                               class="team-logo-link"
                                               title="@tt.Team.FullName">
                                                <img src="@tt.Team.LogoURL"
                                                     class="team-logo"
                                                     alt="@tt.Team.FullName" />
                                            </a>
                                        }
                                    </div>
                                }
                                else
                                {
                                    @foreach (var tt in t.TournamentTeams.OrderBy(tt => tt.Seed))
                                    {
                                        <a asp-controller="Teams"
                                           asp-action="Details"
                                           asp-route-id="@tt.Team.Id"
                                           asp-route-information="@tt.Team.GetInformation()"
                                           class="team-logo-link"
                                           title="@tt.Team.FullName">
                                            <img src="@tt.Team.LogoURL"
                                                 class="team-logo"
                                                 alt="@tt.Team.FullName" />
                                        </a>
                                    }
                                }
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="tournament-teams">
                            <div class="teams-label">No teams registered yet</div>
                        </div>
                    }

                    <div class="tournament-action">
                        <a asp-action="Details" asp-route-id="@t.Id" class="view-tournament-btn">View Tournament</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .remaining-teams-layer {
        position: absolute;
        z-index: 2000;
        background: #0f1116;
        border: 1px solid rgba(255,255,255,0.12);
        box-shadow: 0 10px 30px rgba(0,0,0,0.35);
        border-radius: 10px;
        padding: 10px;
        min-width: 220px;
        max-width: 320px;
        display: none;
    }
    .remaining-teams-layer .remaining-teams-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(48px, 1fr));
        gap: 8px;
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const cards = document.querySelectorAll('.tournament-card.loading');
        cards.forEach((card, index) => {
            setTimeout(() => {
                card.style.animationDelay = `${index * 0.1}s`;
            }, 100);
        });

        // Toggle remaining teams popup
        // Floating popover for remaining teams (escapes card overflow)
        let floatingLayer = null;
        const moreButtons = document.querySelectorAll('.team-more-btn');
        moreButtons.forEach(button => {
            button.addEventListener('click', function(e) {
                e.preventDefault();
                e.stopPropagation();
                const tournamentId = this.getAttribute('data-tournament-id');
                const popup = document.getElementById('remaining-teams-' + tournamentId);
                if (!popup) return;

                // Lazy-create floating layer
                if (!floatingLayer) {
                    floatingLayer = document.createElement('div');
                    floatingLayer.className = 'remaining-teams-layer';
                    document.body.appendChild(floatingLayer);
                }

                // Toggle
                const isVisible = floatingLayer.style.display === 'block' && floatingLayer.dataset.owner === tournamentId;
                floatingLayer.style.display = 'none';

                if (!isVisible) {
                    // Move content into floating layer to escape overflow
                    floatingLayer.innerHTML = popup.innerHTML;
                    floatingLayer.dataset.owner = tournamentId;

                    const buttonRect = this.getBoundingClientRect();
                    const layerRect = floatingLayer.getBoundingClientRect();
                    const top = buttonRect.bottom + 8 + window.scrollY;
                    let left = buttonRect.left + window.scrollX - 10;

                    // Keep within viewport
                    const maxLeft = window.scrollX + window.innerWidth - 20 - (layerRect.width || 300);
                    left = Math.max(window.scrollX + 10, Math.min(left, maxLeft));

                    floatingLayer.style.top = `${top}px`;
                    floatingLayer.style.left = `${left}px`;
                    floatingLayer.style.display = 'block';
                }
            });
        });

        // Close popup when clicking outside
        document.addEventListener('click', function(e) {
            if (!e.target.closest('.team-more-btn') && !e.target.closest('.remaining-teams-layer')) {
                if (floatingLayer) {
                    floatingLayer.style.display = 'none';
                }
            }
        });
    });
</script>