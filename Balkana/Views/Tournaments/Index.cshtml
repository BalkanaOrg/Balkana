@model IEnumerable<Balkana.Data.Models.Tournament>

@{
    ViewData["Title"] = "Tournaments";
}

<div class="tournament-container">
    <div class="tournament-header">
        <h2>Tournaments</h2>
        <a asp-action="Add" class="add-tournament-btn">Add New Tournament</a>
    </div>

    <div class="tournament-grid">
        @foreach (var t in Model)
        {
            <div class="tournament-card loading">
                @* Tournament Status Badge *@
                <div class="tournament-status @(DateTime.Now < t.StartDate ? "status-upcoming" : 
                    DateTime.Now > t.EndDate ? "status-completed" : "status-live")">
                    @(DateTime.Now < t.StartDate ? "Upcoming" : 
                      DateTime.Now > t.EndDate ? "Completed" : "Live")
                </div>

                @* Tournament Image *@
                @if (!string.IsNullOrEmpty(""))
                {
                    <img src="" class="tournament-image" alt="@t.FullName" />
                }
                else
                {
                    <div class="tournament-image-placeholder">
                        @t.FullName
                    </div>
                }

                <div class="tournament-content">
                    <h3 class="tournament-title">@t.FullName</h3>
                    <p class="tournament-description">@t.Description</p>

                    <div class="tournament-details">
                        <div class="tournament-detail-item">
                            <span class="detail-label">Organizer:</span>
                            <span class="detail-value">@(t.Organizer?.FullName ?? "TBD")</span>
                        </div>
                        <div class="tournament-detail-item">
                            <span class="detail-label">Game:</span>
                            <span class="detail-value">@(t.Game?.FullName ?? "TBD")</span>
                        </div>
                        <div class="tournament-detail-item">
                            <span class="detail-label">Prize Pool:</span>
                            <span class="tournament-price">@(t.PrizePool.ToString("C") ?? "TBD")</span>
                        </div>
                        <div class="tournament-detail-item">
                            <span class="detail-label">Dates:</span>
                            <span class="tournament-dates">
                                @{
                                    var startDate = t.StartDate.Date;
                                    var endDate = t.EndDate.Date;
                                    if (startDate == endDate)
                                    {
                                        @startDate.ToString("MMM dd, yyyy")
                                    }
                                    else
                                    {
                                        @($"{startDate.ToString("MMM dd")} - {endDate.ToString("MMM dd, yyyy")}")
                                    }
                                }
                            </span>
                        </div>
                    </div>

                    @if (t.TournamentTeams != null && t.TournamentTeams.Any())
                    {
                        <div class="tournament-teams">
                            <div class="teams-label">Participating Teams (@t.TournamentTeams.Count()):</div>
                            <div class="teams-grid">
                                @foreach (var tt in t.TournamentTeams.OrderBy(tt => tt.Seed).Take(8))
                                {
                                    <img src="@tt.Team.LogoURL"
                                         class="team-logo"
                                         alt="@tt.Team.FullName"
                                         title="@tt.Team.FullName" />
                                }
                                @if (t.TournamentTeams.Count() > 8)
                                {
                                    <div class="team-logo" style="display: flex; align-items: center; justify-content: center; background: rgba(255,255,255,0.2); font-size: 0.8rem;">
                                        +@(t.TournamentTeams.Count() - 8)
                                    </div>
                                }
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="tournament-teams">
                            <div class="teams-label">No teams registered yet</div>
                        </div>
                    }

                    <div class="tournament-action">
                        <a asp-action="Details" asp-route-id="@t.Id" class="view-tournament-btn">View Tournament</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    /* Tournament Page CSS */
    .tournament-container {
        background: linear-gradient(black);
        min-height: 100vh;
        padding: 20px 0;
    }

    .tournament-header {
        text-align: center;
        color: white;
        margin-bottom: 40px;
        padding: 20px 0;
    }

    .tournament-header h2 {
        font-size: 3rem;
        font-weight: bold;
        text-shadow: 0 4px 8px rgba(0,0,0,0.5);
        margin-bottom: 10px;
    }

    .add-tournament-btn {
        background: linear-gradient(45deg, #8b0000, #2d1b69);
        border: none;
        color: white;
        padding: 12px 30px;
        border-radius: 25px;
        font-weight: bold;
        text-decoration: none;
        display: inline-block;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(139, 0, 0, 0.3);
    }

    .add-tournament-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(139, 0, 0, 0.5);
        color: white;
    }

    .tournament-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
        gap: 30px;
        padding: 0 20px;
        max-width: 1400px;
        margin: 0 auto;
    }

    .tournament-card {
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
        border-radius: 20px;
        overflow: hidden;
        transition: all 0.4s ease;
        border: 1px solid rgba(255, 255, 255, 0.1);
        position: relative;
    }

    .tournament-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
        border-color: rgba(255, 255, 255, 0.2);
    }

    .tournament-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 4px;
        background: linear-gradient(90deg, #8b0000, #2d1b69);
    }

    .tournament-image {
        width: 100%;
        height: 200px;
        object-fit: cover;
        position: relative;
    }

    .tournament-image-placeholder {
        width: 100%;
        height: 200px;
        background: linear-gradient(45deg, #2d1b69, #8b0000);
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 1.2rem;
        font-weight: bold;
    }

    .tournament-content {
        padding: 25px;
        color: white;
    }

    .tournament-title {
        font-size: 1.5rem;
        font-weight: bold;
        margin-bottom: 10px;
        color: #ffffff;
    }

    .tournament-description {
        color: rgba(255, 255, 255, 0.8);
        margin-bottom: 20px;
        font-size: 0.95rem;
        line-height: 1.5;
    }

    .tournament-details {
        margin-bottom: 20px;
    }

    .tournament-detail-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 8px 0;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }

    .tournament-detail-item:last-child {
        border-bottom: none;
    }

    .detail-label {
        font-weight: 600;
        color: #ffffff;
    }

    .detail-value {
        color: rgba(255, 255, 255, 0.9);
    }

    .tournament-price {
        background: linear-gradient(45deg, #8b0000, #ff4444);
        color: white;
        padding: 5px 12px;
        border-radius: 15px;
        font-weight: bold;
        font-size: 0.9rem;
    }

    .tournament-dates {
        background: rgba(255, 255, 255, 0.1);
        padding: 5px 12px;
        border-radius: 15px;
        font-size: 0.85rem;
    }

    .tournament-teams {
        margin: 20px 0;
    }

    .teams-label {
        font-weight: 600;
        margin-bottom: 10px;
        color: #ffffff;
    }

    .teams-grid {
        display: flex;
        flex-wrap: wrap;
        gap: 8px;
    }

    .team-logo {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        border: 2px solid rgba(255, 255, 255, 0.3);
        transition: all 0.3s ease;
    }

    .team-logo:hover {
        transform: scale(1.1);
        border-color: #8b0000;
    }

    .tournament-action {
        margin-top: auto;
    }

    .view-tournament-btn {
        width: 100%;
        background: linear-gradient(45deg, #2d1b69, #8b0000);
        border: none;
        color: white;
        padding: 12px;
        border-radius: 10px;
        font-weight: bold;
        text-decoration: none;
        display: block;
        text-align: center;
        transition: all 0.3s ease;
    }

    .view-tournament-btn:hover {
        background: linear-gradient(45deg, #8b0000, #2d1b69);
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(139, 0, 0, 0.4);
        color: white;
    }

    .tournament-status {
        position: absolute;
        top: 15px;
        right: 15px;
        padding: 5px 12px;
        border-radius: 15px;
        font-size: 0.8rem;
        font-weight: bold;
        text-transform: uppercase;
        z-index: 10;
    }

    .status-upcoming {
        background: rgba(255, 193, 7, 0.9);
        color: #000;
    }

    .status-live {
        background: rgba(40, 167, 69, 0.9);
        color: white;
    }

    .status-completed {
        background: rgba(108, 117, 125, 0.9);
        color: white;
    }

    .tournament-card.loading {
        opacity: 0;
        animation: fadeInUp 0.6s ease forwards;
    }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@media (max-width: 768px) {
        .tournament-grid {
            grid-template-columns: 1fr;
            padding: 0 15px;
        }
        
        .tournament-header h2 {
            font-size: 2rem;
        }
        
        .tournament-card {
            margin-bottom: 20px;
        }
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const cards = document.querySelectorAll('.tournament-card.loading');
        cards.forEach((card, index) => {
            setTimeout(() => {
                card.style.animationDelay = `${index * 0.1}s`;
            }, 100);
        });
    });
</script>