@model IEnumerable<Balkana.Data.Models.Tournament>

@{
    ViewData["Title"] = "Tournaments";
}

<h2>Tournaments</h2>

<p>
    <a asp-action="Add" class="btn btn-primary">Add New Tournament</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Full Name</th>
            <th>Short Name</th>
            <th>Organizer</th>
            <th>Game</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.FullName</td>
                <td>@item.ShortName</td>
                <td>@item.Organizer?.FullName</td>
                <td>@item.Game?.FullName</td>
                <td>@item.StartDate.ToShortDateString()</td>
                <td>@item.EndDate.ToShortDateString()</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>