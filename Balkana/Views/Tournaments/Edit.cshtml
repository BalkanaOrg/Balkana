@model Balkana.Models.Tournaments.TournamentFormViewModel

@{
    ViewData["Title"] = "Edit Tournament";
}
<link rel="stylesheet" href="~/css/tournamentEdit.css" />

<div class="tournament-form-container">
    <div class="form-header">
        <h2>Edit Tournament</h2>
        <p>Design an exciting tournament experience for players</p>
    </div>

    <div class="form-card">
        <form asp-action="Edit" method="post" enctype="multipart/form-data" class="tournament-form">
            <input type="hidden" asp-for="Id" />

            <!-- Tournament Image Upload Section -->
            <div class="image-upload-section">
                <h3 class="section-title">Tournament Image</h3>
                <p class="section-description">Upload an eye-catching image to represent your tournament</p>

                <div class="image-upload-container">
                    <div class="upload-area" id="uploadArea">
                        @* <input type="file" id="tournamentImage" name="TournamentImage" accept="image/*" class="file-input" /> *@
                        @* <label asp-for="LogoFile"></label> *@
                        @* @if (!string.IsNullOrEmpty(Model.BannerUrl))
                        {
                            <div class="mb-2">
                                <img src="@Model.BannerUrl" alt="Current Banner" style="max-height:150px; border:1px solid #ccc;" />
                            </div>
                        } *@
                        <input asp-for="LogoFile" type="file" accept="image/*" id="tournamentImage" class="form-control" />
                        <span asp-validation-for="LogoFile" class="text-danger"></span>
                        <div class="upload-placeholder" id="uploadPlaceholder">
                            <div class="upload-icon">📸</div>
                            <div class="upload-text">
                                <strong>Click to upload</strong> or drag and drop
                            </div>
                            <div class="upload-subtext">PNG, JPG, JPEG up to 10MB</div>
                        </div>
                        <div class="image-preview" id="imagePreview" style="display: none;">
                            <img id="previewImg" src="" alt="Tournament Preview" />
                            <div class="image-overlay">
                                <button type="button" class="change-image-btn" id="changeImageBtn">Change Image</button>
                                <button type="button" class="remove-image-btn" id="removeImageBtn">Remove</button>
                            </div>
                        </div>
                    </div>
                    <div class="image-upload-info">
                        <small>Recommended size: 594x140px for best results</small>
                    </div>
                </div>
            </div>

            <div class="form-content-grid">
                <!-- Basic Information -->
                <div class="form-section">
                    <h3 class="section-title">Basic Information</h3>

                    <div class="form-group">
                        <label asp-for="FullName" class="form-label">Tournament Name *</label>
                        <input asp-for="FullName" class="form-control" placeholder="Enter full tournament name" required />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="ShortName" class="form-label">Short Name *</label>
                        <input asp-for="ShortName" class="form-control" placeholder="e.g., WC2025" required />
                        <span asp-validation-for="ShortName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Description" class="form-label">Description</label>
                        <textarea asp-for="Description" class="form-control" rows="4" placeholder="Describe your tournament, rules, and what makes it special..."></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>

                <!-- Tournament Details -->
                <div class="form-section">
                    <h3 class="section-title">Tournament Details</h3>

                    <div class="form-group">
                        <label asp-for="OrganizerId" class="form-label">Organizer ID *</label>
                        <select asp-for="OrganizerId" class="form-control" id="orgSelect">
                            @foreach (var org in Model.Organizers)
                            {
                                <option value="@org.Id">@org.FullName</option>
                            }
                        </select>
                        <span asp-validation-for="OrganizerId" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="GameId" class="form-label">Game ID *</label>
                        <select asp-for="GameId" class="form-control" id="gameSelect">
                            @foreach (var game in Model.Games)
                            {
                                <option value="@game.Id">@game.FullName</option>
                            }
                        </select>
                        <span asp-validation-for="GameId" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="PrizePool" class="form-label">Prize Pool</label>
                        <div class="input-group">
                            <span class="input-group-text">$</span>
                            <input asp-for="PrizePool" name="PrizePool" type="number" class="form-control" placeholder="0.00" step="0.01" min="0" />
                        </div>
                        <div class="form-help">Leave empty if prize pool is TBD</div>
                    </div>

                    <div class="form-group">
                        <label asp-for="EliminationType" class="form-label">Elimination Type</label>
                        <select asp-for="EliminationType" asp-items="Model.EliminationTypes" class="form-control">
                        </select>
                        <span asp-validation-for="EliminationType" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <!-- Points and Prize Configuration Section -->
            <div class="form-section full-width">
                <h3 class="section-title">Points & Prize Configuration</h3>
                <p class="section-description">Configure custom points and prize distribution for this tournament</p>

                <div class="config-grid">
                    <div class="form-group">
                        <label asp-for="PointsConfiguration" class="form-label">Points Configuration (JSON)</label>
                        <textarea asp-for="PointsConfiguration" class="form-control config-textarea text-white" rows="6" 
                                  placeholder='{"1": 150, "2": 75, "3": 50, "4": 50, "5": 25, "6": 25, "7": 25, "8": 25}'></textarea>
                        <div class="form-help">
                            <strong>Example:</strong> {"1": 150, "2": 75, "3": 50, "4": 50, "5": 25, "6": 25, "7": 25, "8": 25}<br>
                            Leave empty to use default point distribution.
                        </div>
                        <span asp-validation-for="PointsConfiguration" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="PrizeConfiguration" class="form-label">Prize Configuration (JSON)</label>
                        <textarea asp-for="PrizeConfiguration" class="form-control config-textarea text-white" rows="6" 
                                  placeholder='{"1": 0.50, "2": 0.30, "3": 0.20}'></textarea>
                        <div class="form-help">
                            <strong>Example:</strong> {"1": 0.66, "2": 0.33}<br>
                            Values are percentages of total prize pool. Leave empty to use default distribution.
                        </div>
                        <span asp-validation-for="PrizeConfiguration" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <!-- Dates Section -->
            <div class="form-section full-width">
                <h3 class="section-title">Tournament Schedule</h3>

                <div class="date-grid">
                    <div class="form-group">
                        <label asp-for="StartDate" class="form-label">Start Date *</label>
                        <input asp-for="StartDate" class="form-control" type="date" required />
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="EndDate" class="form-label">End Date *</label>
                        <input asp-for="EndDate" class="form-control" type="date" required />
                        <span asp-validation-for="EndDate" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label>Participating Teams (click to select - order matters)</label>
                <div id="teamsList">
                    @foreach (var team in Model.AvailableTeams)
                    {
                        var isChecked = Model.SelectedTeamIds?.Contains(team.Id) ?? false;
                        <div class="team-row">
                            <input type="checkbox"
                                   class="team-checkbox"
                                   data-team-id="@team.Id"
                                   id="teamchk_@team.Id"
                                   @(isChecked ? "checked" : "") />
                            <label for="teamchk_@team.Id">@team.FullName</label>
                        </div>
                    }
                </div>

                <!-- Hidden inputs will be appended here in click order -->
                <div id="selectedTeamsContainer"></div>
            </div>

            <div class="form-actions">
                <a asp-action="Index" class="btn-secondary">
                    <span class="btn-icon">←</span>
                    Cancel
                </a>
                <button type="submit" class="btn-primary">
                    <span class="btn-icon">✓</span>
                    Update Tournament
                </button>
            </div>
        </form>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const fileInput = document.getElementById('tournamentImage');
        const uploadArea = document.getElementById('uploadArea');
        const uploadPlaceholder = document.getElementById('uploadPlaceholder');
        const imagePreview = document.getElementById('imagePreview');
        const previewImg = document.getElementById('previewImg');
        const changeImageBtn = document.getElementById('changeImageBtn');
        const removeImageBtn = document.getElementById('removeImageBtn');

        // Drag and drop functionality
        uploadArea.addEventListener('dragover', function(e) {
            e.preventDefault();
            uploadArea.classList.add('drag-over');
        });

        uploadArea.addEventListener('dragleave', function(e) {
            e.preventDefault();
            uploadArea.classList.remove('drag-over');
        });

        uploadArea.addEventListener('drop', function(e) {
            e.preventDefault();
            uploadArea.classList.remove('drag-over');

            const files = e.dataTransfer.files;
            if (files.length > 0 && files[0].type.startsWith('image/')) {
                handleImageUpload(files[0]);
            }
        });

        // Click to upload
        uploadArea.addEventListener('click', function() {
            if (uploadPlaceholder.style.display !== 'none') {
                fileInput.click();
            }
        });

        // File input change
        fileInput.addEventListener('change', function(e) {
            if (e.target.files.length > 0) {
                handleImageUpload(e.target.files[0]);
            }
        });

        // Change image button
        changeImageBtn.addEventListener('click', function(e) {
            e.stopPropagation();
            fileInput.click();
        });

        // Remove image button
        removeImageBtn.addEventListener('click', function(e) {
            e.stopPropagation();
            removeImage();
        });

        function handleImageUpload(file) {
            // Validate file size (10MB limit)
            if (file.size > 10 * 1024 * 1024) {
                alert('File size must be less than 10MB');
                return;
            }

            // Validate file type
            if (!file.type.startsWith('image/')) {
                alert('Please select an image file');
                return;
            }

            // Show preview
            const reader = new FileReader();
            reader.onload = function(e) {
                previewImg.src = e.target.result;
                uploadPlaceholder.style.display = 'none';
                imagePreview.style.display = 'flex';

                // Add animation
                imagePreview.style.opacity = '0';
                setTimeout(() => {
                    imagePreview.style.opacity = '1';
                }, 50);
            };
            reader.readAsDataURL(file);
        }

        function removeImage() {
            fileInput.value = '';
            uploadPlaceholder.style.display = 'flex';
            imagePreview.style.display = 'none';
            previewImg.src = '';
        }

        // Auto-generate short name from full name
        document.querySelector('input[name="FullName"]').addEventListener('input', function(e) {
            const fullName = e.target.value;
            const shortNameInput = document.querySelector('input[name="ShortName"]');

            if (fullName && !shortNameInput.value) {
                // Generate short name from first letters of words
                const words = fullName.split(' ').filter(word => word.length > 0);
                if (words.length > 1) {
                    const shortName = words.map(word => word.charAt(0).toUpperCase()).join('');
                    shortNameInput.value = shortName;
                } else if (words.length === 1) {
                    shortNameInput.value = words[0].substring(0, 3).toUpperCase();
                }
            }
        });

        // Date validation
        const startDateInput = document.querySelector('input[name="StartDate"]');
        const endDateInput = document.querySelector('input[name="EndDate"]');

        startDateInput.addEventListener('change', function() {
            endDateInput.min = this.value;
            if (endDateInput.value && endDateInput.value < this.value) {
                endDateInput.value = this.value;
            }
        });


        const checkboxes = document.querySelectorAll('.team-checkbox');
        const hiddenContainer = document.getElementById('selectedTeamsContainer');
        const form = document.querySelector('form');

        // maintain ordered array of selected team ids (string values)
        const order = [];

        // initialize from any checkboxes that are pre-checked
        checkboxes.forEach(cb => {
            const id = cb.dataset.teamId;
            if (cb.checked) {
            order.push(id);
            const h = document.createElement('input');
            h.type = 'hidden';
            h.name = 'SelectedTeamIds';
            h.value = id;
            h.dataset.id = id;
            hiddenContainer.appendChild(h);
            }
        });

        checkboxes.forEach(cb => {
            cb.addEventListener('change', () => {
            const id = cb.dataset.teamId;
            if (cb.checked) {
                // append to order & add hidden input last -> click order preserved
                order.push(id);
                const hidden = document.createElement('input');
                hidden.type = 'hidden';
                hidden.name = 'SelectedTeamIds';
                hidden.value = id;
                hidden.dataset.id = id;
                hiddenContainer.appendChild(hidden);
            } else {
                // remove from order and remove hidden input
                const idx = order.indexOf(id);
                if (idx > -1) order.splice(idx, 1);
                const hidden = hiddenContainer.querySelector(`input[data-id='${id}']`);
                if (hidden) hidden.remove();
            }
            });
        });

        // optional: on form submit, ensure no select exists or is disabled (not required for checkbox approach)
        form.addEventListener('submit', () => {
            // nothing else required — hidden inputs are authoritative
        });
    });
</script>

