@model Balkana.Models.Tournaments.TournamentFormViewModel

@{
    ViewData["Title"] = "Add Tournament";
}

<h2>Add Tournament</h2>

<form asp-action="Add" method="post">
    <div class="form-group">
        <label asp-for="FullName"></label>
        <input asp-for="FullName" class="form-control" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ShortName"></label>
        <input asp-for="ShortName" class="form-control" />
        <span asp-validation-for="ShortName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="OrganizerId"></label>
        <input asp-for="OrganizerId" class="form-control" />
        <span asp-validation-for="OrganizerId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="GameId"></label>
        <input asp-for="GameId" class="form-control" />
        <span asp-validation-for="GameId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="StartDate"></label>
        <input asp-for="StartDate" class="form-control" type="date" />
        <span asp-validation-for="StartDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="EndDate"></label>
        <input asp-for="EndDate" class="form-control" type="date" />
        <span asp-validation-for="EndDate" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Save</button>
</form>