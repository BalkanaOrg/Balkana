        box-shadow: 0 8px 32px rgba(0,0,0,0.8), inset 0 1px 0 rgba(255,255,255,0.05);
    }

    /* Individual brackets */
    .bracket-ub, .bracket-lb, .bracket-gf {
        display: flex;
        flex-direction: column;
        gap: 18px;
    }

    /* Ultra Black Matches */
    .match {
        min-width: 150px;
        background: linear-gradient(135deg, #000000 0%, #0a0a0a 50%, #000000 100%) !important;
        color: #f9fafb;
        border: 2px solid #1a1a1a;
        border-radius: 12px;
        padding: 12px;
        font-size: 0.9rem;
        box-shadow: 0 4px 16px rgba(0,0,0,0.6);
        transition: all 0.3s ease;
