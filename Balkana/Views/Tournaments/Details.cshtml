@using Balkana.Data.Models
@model Balkana.Data.Models.Tournament

@{
    ViewData["Title"] = "Tournament Details";
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Tournament Header -->
<div class="tournament-header">
    <div class="container-fluid">
        <div class="row align-items-center">
            <div class="col-md-2">
                <div class="tournament-logo">
                    <img src="@Model.BannerUrl" alt="@Model.FullName" class="img-fluid rounded" />
                </div>
            </div>
            <div class="col-md-8">
                <div class="tournament-info">
                    <h1 class="tournament-title">@Model.FullName</h1>
                    <h2 class="tournament-subtitle">@Model.ShortName</h2>
                    <div class="tournament-meta">
                        <span class="badge bg-primary me-2">@Model.Game?.FullName</span>
                        <span class="badge bg-secondary me-2">@Model.Elimination</span>
                        @if (Model.PrizePool > 0)
                        {
                            <span class="badge bg-success">$@Model.PrizePool.ToString("N0") Prize Pool</span>
                        }
                    </div>
                </div>
            </div>
            <div class="col-md-2">
                <div class="tournament-actions">
                    @if (!Model.Series.Any())
                    {
                        <form asp-action="GenerateBracket" method="post" class="d-inline">
                            <input type="hidden" name="tournamentId" value="@Model.Id" />
                            <button type="submit" class="btn btn-success btn-lg w-100 mb-2">
                                <i class="fas fa-trophy"></i> Generate Bracket
                            </button>
                        </form>
                    }
                    else
                    {
                        <form asp-action="DeleteBracket" method="post" class="d-inline">
                            <input type="hidden" name="tournamentId" value="@Model.Id" />
                            <button type="submit" class="btn btn-danger btn-lg w-100 mb-2" onclick="return confirm('Are you sure you want to delete the entire bracket? This action cannot be undone.')">
                                <i class="fas fa-trash"></i> Delete Bracket
                            </button>
                        </form>
                        
                        @if (!Model.Placements.Any())
                        {
                            <a asp-action="Conclude" asp-route-id="@Model.Id" class="btn btn-warning btn-lg w-100 mb-2">
                                <i class="fas fa-flag-checkered"></i> Conclude Tournament
                            </a>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Tournament Details -->
<div class="tournament-details">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-8">
                <div class="card tournament-card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-info-circle"></i> Tournament Information
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="info-item">
                                    <label>Organizer</label>
                                    <span>@Model.Organizer?.FullName</span>
                                </div>
                                <div class="info-item">
                                    <label>Game</label>
                                    <span>@Model.Game?.FullName</span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="info-item">
                                    <label>Start Date</label>
                                    <span>@Model.StartDate.ToString("MMMM dd, yyyy")</span>
                                </div>
                                <div class="info-item">
                                    <label>End Date</label>
                                    <span>@Model.EndDate.ToString("MMMM dd, yyyy")</span>
                                </div>
                            </div>
                        </div>
                        @if (!string.IsNullOrEmpty(Model.Description))
                        {
                            <div class="info-item mt-3">
                                <label>Description</label>
                                <p class="description-text">@Model.Description</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card tournament-stats">
                    <div class="card-header">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-chart-bar"></i> Tournament Stats
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="stat-item">
                            <div class="stat-value">@Model.TournamentTeams.Count</div>
                            <div class="stat-label">Teams</div>
                        </div>
                        <div class="stat-item">
                            <div class="stat-value">@Model.Series.Count</div>
                            <div class="stat-label">Matches</div>
                        </div>
                        @if (Model.PrizePool > 0)
                        {
                            <div class="stat-item">
                                <div class="stat-value">$@Model.PrizePool.ToString("N0")</div>
                                <div class="stat-label">Prize Pool</div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Tournament Bracket -->
@if (Model.Series.Any())
{
    <div class="tournament-bracket">
        <div class="container-fluid">
            <partial name="_BracketLayout" model="Model" />
        </div>
    </div>
}

<!-- Placements Section -->
<div class="tournament-placements">
    <div class="container-fluid">
        <partial name="_PlacementsPartial" model="Model" />
    </div>
</div>

<!-- Participants Section -->
<div class="tournament-participants">
    <div class="container-fluid">
        <partial name="_ParticipantsPartial" model="Model" />
    </div>
</div>

<!-- Series Details Modal -->
<div id="seriesModal" class="series-modal">
    <div class="series-modal-content">
        <div class="series-modal-header">
            <h3 class="series-modal-title" id="seriesModalTitle">Series Details</h3>
            <button class="series-modal-close" onclick="closeSeriesModal()">&times;</button>
        </div>
        <div class="series-modal-body" id="seriesModalBody">
            <!-- Content will be loaded dynamically -->
        </div>
    </div>
</div>

<!-- Forfeit Series Modal -->
<div id="forfeitModal" class="series-modal">
    <div class="series-modal-content">
        <div class="series-modal-header">
            <h3 class="series-modal-title">Forfeit Series</h3>
            <button class="series-modal-close" onclick="closeForfeitModal()">&times;</button>
        </div>
        <div class="series-modal-body">
            <form id="forfeitForm" method="post" asp-controller="MatchHistory" asp-action="ForfeitSeries">
                <input type="hidden" id="forfeitSeriesId" name="seriesId" />
                <div class="mb-3">
                    <label for="winningTeamId" class="form-label">Select team that advances:</label>
                    <select class="form-select" id="winningTeamId" name="winningTeamId" required>
                        <option value="">Choose team...</option>
                    </select>
                </div>
                <div class="mb-3">
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle"></i>
                        <strong>Note:</strong> Select which team should advance. The other team will be marked as forfeiting.
                    </div>
                </div>
                <div class="d-flex justify-content-end gap-2">
                    <button type="button" class="btn btn-secondary" onclick="closeForfeitModal()">Cancel</button>
                    <button type="submit" class="btn btn-success">Confirm Advancement</button>
                </div>
            </form>
        </div>
    </div>
</div>

