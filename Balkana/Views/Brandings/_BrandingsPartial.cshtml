@using Balkana.Data.Infrastructure.Extensions
@using Balkana.Services.Brandings.Models
@model IEnumerable<BrandingServiceModel>
@{
    int rank = ViewBag.StartRank ?? 1;
    string rankClass = "";
    if (rank == 1) rankClass = "rank-1";
    else if (rank == 2) rankClass = "rank-2";
    else if (rank == 3) rankClass = "rank-3";
}
@foreach (var branding in Model)
{
    <div class="team-card @rankClass" data-rank="@rank">
        <!-- Rank Badge -->
        <div class="rank-badge @rankClass">
            @rank
        </div>

        <!-- Branding Content -->
        <div class="team-content">
            <div class="team-header">
                <div class="team-logo-container">
                    <img src="@branding.LogoURL"
                         alt="@branding.FullName"
                         class="team-logo"
                         onerror="this.src='https://ui-avatars.com/api/?name=@branding.Tag&background=8b0000&color=fff&size=64'" />
                    <div class="logo-overlay"></div>
                </div>

                <div class="team-info">
                    <h3 class="team-name">@branding.FullName</h3>
                    <p class="team-details">Founded @branding.yearFounded</p>
                    @if (!string.IsNullOrEmpty(branding.FounderName) || !string.IsNullOrEmpty(branding.ManagerName))
                    {
                        <p class="team-details small">
                            @if (!string.IsNullOrEmpty(branding.FounderName))
                            {
                                <span>Founder: @branding.FounderName</span>
                            }
                            @if (!string.IsNullOrEmpty(branding.ManagerName))
                            {
                                @if (!string.IsNullOrEmpty(branding.FounderName))
                                {
                                    <span> â€¢ </span>
                                }
                                <span>Manager: @branding.ManagerName</span>
                            }
                        </p>
                    }
                </div>
            </div>

            <!-- Action Button -->
            <div class="team-actions">
                <a asp-controller="Brandings"
                   asp-action="Details"
                   asp-route-id="@branding.Id"
                   asp-route-information="@branding.GetInformation()"
                   class="view-details-btn">
                    View Details
                </a>
            </div>
        </div>

        <!-- Hover Effect Overlay -->
        <div class="hover-overlay"></div>
    </div>

    rank++;
    if (rank == 2) rankClass = "rank-2";
    else if (rank == 3) rankClass = "rank-3";
    else if (rank > 3) rankClass = "";
}

