@model PlayerDetailsServiceModel
@{
    ViewData["Title"] = Model.Nickname;
    var selectedGame = ViewBag.SelectedGame as string;
    var availableGames = Model.GameProfiles.Select(gp => gp.GameName).ToList();
}

@section Styles {
    <link rel="stylesheet" href="~/css/player-profile.css" />
}

<div class="container-fluid px-0 bg-dark">
    <!-- Hero Section -->
    <div class="hero-section position-relative">
        <div class="hero-overlay position-absolute w-100 h-100"></div>
        <div class="container position-relative">
            <div class="row align-items-center h-100 py-5">
                <div class="col-lg-4 text-center">
                    <div class="player-avatar-container mb-4">
            <img src="@Model.PictureUrl"
                 alt="@Model.Nickname"
                             class="player-avatar shadow-lg" />
                    </div>
                </div>
                <div class="col-lg-8 text-white">
                    <h1 class="display-4 fw-bold mb-3">@Model.Nickname</h1>
                    <h3 class="h5 mb-3 text-light">@Model.FirstName @Model.LastName</h3>
                    
                    <div class="d-flex align-items-center mb-4">
                <img src="@Model.FlagUrl" alt="@Model.NationalityName"
                             class="flag-icon me-3" />
                        <span class="fs-5">@Model.NationalityName</span>
                    </div>

                    <!-- Game Filter Tabs -->
                    @if (availableGames.Any())
                    {
                        <div class="game-filter-tabs mb-4">
                            <div class="btn-group" role="group">
                                <a asp-action="Profile" asp-route-id="@Model.Id" asp-route-information="@Model.GetInformation()"
                                   class="btn @(string.IsNullOrEmpty(selectedGame) ? "btn-light" : "btn-outline-light")">
                                    All Games
                                </a>
                                @foreach (var game in availableGames)
                                {
                                    <a asp-action="Profile" asp-route-id="@Model.Id" asp-route-information="@Model.GetInformation()" asp-route-game="@game"
                                       class="btn @(selectedGame == game ? "btn-light" : "btn-outline-light")">
                                        @game
                                    </a>
                                }
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="container py-5">
        <!-- Navigation Tabs -->
        <ul class="nav nav-pills nav-fill mb-5" id="profileTabs" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="stats-tab" data-bs-toggle="pill" data-bs-target="#stats" type="button" role="tab">
                    <i class="fa fa-line-chart me-2"></i>Statistics
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="tournaments-tab" data-bs-toggle="pill" data-bs-target="#tournaments" type="button" role="tab">
                    <i class="fa fa-trophy me-2"></i>Tournaments
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="matches-tab" data-bs-toggle="pill" data-bs-target="#matches" type="button" role="tab">
                    <i class="fa fa-gamepad me-2"></i>Match History
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="transfers-tab" data-bs-toggle="pill" data-bs-target="#transfers" type="button" role="tab">
                    <i class="fa fa-exchange me-2"></i>Transfers
                </button>
            </li>
        </ul>

        <div class="tab-content" id="profileTabsContent">
            <!-- Statistics Tab -->
            <div class="tab-pane fade show active" id="stats" role="tabpanel">
                @if (Model.AverageStatsByGame.Any())
                {
                    @foreach (var gameStats in Model.AverageStatsByGame.Where(kvp => string.IsNullOrEmpty(selectedGame) || kvp.Key == selectedGame))
                    {
                        <div class="card mb-4 shadow-sm">
                            <div class="card-header bg-gradient text-white">
                                <h5 class="mb-0"><i class="fa fa-bar-chart me-2"></i>@gameStats.Key Statistics</h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <!-- Overall Stats -->
                                    <div class="col-md-3 mb-3">
                                        <div class="stat-card text-center p-3 bg-light rounded">
                                            <div class="stat-value text-primary fw-bold">@gameStats.Value.TotalMatches</div>
                                            <div class="stat-label text-muted">Matches</div>
                                        </div>
                                    </div>
                                    <div class="col-md-3 mb-3">
                                        <div class="stat-card text-center p-3 bg-light rounded">
                                            <div class="stat-value text-success fw-bold">@gameStats.Value.WinRate.ToString("F1")%</div>
                                            <div class="stat-label text-muted">Win Rate</div>
                                        </div>
                                    </div>
                                    <div class="col-md-3 mb-3">
                                        <div class="stat-card text-center p-3 bg-light rounded">
                                            <div class="stat-value text-info fw-bold">@gameStats.Value.Wins</div>
                                            <div class="stat-label text-muted">Wins</div>
                                        </div>
                                    </div>
                                    <div class="col-md-3 mb-3">
                                        <div class="stat-card text-center p-3 bg-light rounded">
                                            <div class="stat-value text-danger fw-bold">@gameStats.Value.Losses</div>
                                            <div class="stat-label text-muted">Losses</div>
                                        </div>
                                    </div>
    </div>

                                @if (gameStats.Value.Source == "FACEIT")
                                {
                                    <!-- CS2 Stats -->
                                    <div class="row mt-4">
                                        <div class="col-md-6">
                                            <h6 class="text-muted mb-3">Performance</h6>
                                            <div class="row">
                                                <div class="col-6 mb-2">
                                                    <small class="text-muted">K/D/A</small>
                                                    <div class="fw-bold">@gameStats.Value.AverageKills?.ToString("F1") / @gameStats.Value.AverageDeaths?.ToString("F1") / @gameStats.Value.AverageAssists?.ToString("F1")</div>
                                                </div>
                                                <div class="col-6 mb-2">
                                                    <small class="text-muted">ADR</small>
                                                    <div class="fw-bold">@gameStats.Value.AverageADR?.ToString("F0")</div>
                                                </div>
                                                <div class="col-6 mb-2">
                                                    <small class="text-muted">HLTV Rating</small>
                                                    <div class="fw-bold">@gameStats.Value.AverageHLTVRating?.ToString("F2")</div>
                                                </div>
                                                <div class="col-6 mb-2">
                                                    <small class="text-muted">Headshot %</small>
                                                    <div class="fw-bold">@gameStats.Value.AverageHeadshotPercentage?.ToString("F1")%</div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <h6 class="text-muted mb-3">Rates</h6>
                                            <div class="row">
                                                <div class="col-6 mb-2">
                                                    <small class="text-muted">KPR</small>
                                                    <div class="fw-bold">@gameStats.Value.AverageKPR?.ToString("F2")</div>
                                                </div>
                                                <div class="col-6 mb-2">
                                                    <small class="text-muted">DPR</small>
                                                    <div class="fw-bold">@gameStats.Value.AverageDPR?.ToString("F2")</div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                                else if (gameStats.Value.Source == "RIOT")
                                {
                                    <!-- LoL Stats -->
                                    <div class="row mt-4">
                                        <div class="col-md-6">
                                            <h6 class="text-muted mb-3">Performance</h6>
                                            <div class="row">
                                                <div class="col-6 mb-2">
                                                    <small class="text-muted">K/D/A</small>
                                                    <div class="fw-bold">@gameStats.Value.AverageLoLKills?.ToString("F1") / @gameStats.Value.AverageLoLDeaths?.ToString("F1") / @gameStats.Value.AverageLoLAssists?.ToString("F1")</div>
                                                </div>
                                                <div class="col-6 mb-2">
                                                    <small class="text-muted">CS</small>
                                                    <div class="fw-bold">@gameStats.Value.AverageCreepScore?.ToString("F0")</div>
                                                </div>
                                                <div class="col-6 mb-2">
                                                    <small class="text-muted">Vision Score</small>
                                                    <div class="fw-bold">@gameStats.Value.AverageVisionScore?.ToString("F1")</div>
                                                </div>
                                                <div class="col-6 mb-2">
                                                    <small class="text-muted">Gold</small>
                                                    <div class="fw-bold">@gameStats.Value.AverageGoldEarned?.ToString("F0")</div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }

                                <!-- Map Statistics -->
                                @if (gameStats.Value.MapStats.Any())
                                {
                                    <div class="row mt-4">
                                        <div class="col-12">
                                            <h6 class="text-muted mb-3">Map Performance</h6>
                                            <div class="row">
                                                @foreach (var map in gameStats.Value.MapStats)
                                                {
                                                    <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                                                        <div class="map-card">
                                                            <div class="map-card-header">
                                                                @if (!string.IsNullOrEmpty(map.PictureURL))
                                                                {
                                                                    <img src="@map.PictureURL" 
                                                                         alt="@map.MapDisplayName" 
                                                                         class="map-image" />
                                                                }
                                                                <div class="map-info">
                                                                    <h6 class="map-name">@map.MapDisplayName</h6>
                                                                    <small class="map-pickrate">@map.PickRate.ToString("F1")% pick rate</small>
                                                                </div>
                                                            </div>
                                                            
                                                            <div class="map-stats">
                                                                <div class="row text-center">
                                                                    <div class="col-4">
                                                                        <div class="stat-value text-primary">@map.MatchesPlayed</div>
                                                                        <div class="stat-label">Matches</div>
                                                                    </div>
                                                                    <div class="col-4">
                                                                        <div class="stat-value text-success">@map.Wins</div>
                                                                        <div class="stat-label">Wins</div>
                                                                    </div>
                                                                    <div class="col-4">
                                                                        <div class="stat-value text-danger">@map.Losses</div>
                                                                        <div class="stat-label">Losses</div>
                                                                    </div>
                                                                </div>
                                                                
                                                                <div class="winrate-section">
                                                                    <span class="badge bg-@(map.WinRate >= 50 ? "success" : "danger") winrate-badge">
                                                                        @map.WinRate.ToString("F1")% Win Rate
                                                                    </span>
                                                                </div>
                                                                
                                                                <div class="hltv-rating">
                                                                    <div class="rating-label">Avg HLTV Rating</div>
                                                                    <div class="rating-value">@map.AverageHLTVRating.ToString("F2")</div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                }
                else
                {
                        <div class="card">
                            <div class="card-body text-center py-5">
                                <i class="fa fa-line-chart fa-3x text-muted mb-3"></i>
                                <h5 class="text-muted">No statistics available</h5>
                                <p class="text-muted">Statistics will appear here once the player participates in matches.</p>
                            </div>
                        </div>
                }
            </div>

            <!-- Tournaments Tab -->
            <div class="tab-pane fade" id="tournaments" role="tabpanel">
                <!-- Trophy Cabinet Section -->
                <div class="card mb-4 shadow-sm">
                    <div class="card-header bg-gradient text-white">
                        <h5 class="mb-0"><i class="fa fa-trophy me-2"></i>Trophy Cabinet</h5>
                    </div>
                    <div class="card-body">
                        @{
                            var filteredTrophies = Model.Trophies;
                            var filteredMVPs = Model.MVPs;
                            var filteredEVPs = Model.EVPs;

                            if (!string.IsNullOrEmpty(selectedGame))
                            {
                                // Filter trophies by selected game - you may need to add game filtering logic to your service
                                // For now, showing all trophies regardless of game filter
                            }
                        }

                        @if (filteredMVPs.Any() || filteredEVPs.Any() || filteredTrophies.Any())
                        {
                            <div class="trophy-display">
                                <div class="trophies-row">
                                    <!-- MVPs Grouped -->
                                    @if (filteredMVPs.Any())
                                    {
                                        <div class="trophy-item mvp-item" data-bs-toggle="modal" data-bs-target="#mvpModal">
                                            <img src="@filteredMVPs.First().IconURL" alt="MVP" class="trophy-icon mvp-icon" />
                                            @if (filteredMVPs.Count > 1)
                                            {
                                                <span class="trophy-count mvp-count">@filteredMVPs.Count</span>
                                            }
                                        </div>
                                    }

                                    <!-- EVPs Grouped -->
                                    @if (filteredEVPs.Any())
                                    {
                                        <div class="trophy-item evp-item" data-bs-toggle="modal" data-bs-target="#evpModal">
                                            <img src="@filteredEVPs.First().IconURL" alt="EVP" class="trophy-icon evp-icon" />
                                            @if (filteredEVPs.Count > 1)
                                            {
                                                <span class="trophy-count evp-count">@filteredEVPs.Count</span>
                                            }
                                        </div>
                                    }

                                    <!-- Tournament Trophies (Individual) -->
                                    @if (filteredTrophies.Any())
                                    {
                                        @foreach (var trophy in filteredTrophies)
                                        {
                                            <div class="trophy-item tooltip" title="@trophy.Description">
                                                <img src="@trophy.IconURL" alt="@trophy.Description" class="trophy-icon" />
                                                <span class="tooltiptext">@trophy.Description</span>
                                            </div>
                                        }
                                    }
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-3">
                                <p class="text-muted">No achievements yet</p>
                            </div>
                        }
                    </div>
                </div>

                @if (Model.TournamentParticipationByGame.Any())
                {
                    @foreach (var gameParticipation in Model.TournamentParticipationByGame.Where(kvp => string.IsNullOrEmpty(selectedGame) || kvp.Key == selectedGame))
                    {
                        <div class="card mb-4 shadow-sm">
                            <div class="card-header bg-gradient text-white">
                                <h5 class="mb-0"><i class="fa fa-trophy me-2"></i>@gameParticipation.Key Tournaments</h5>
                            </div>
                            <div class="card-body">
                                @if (gameParticipation.Value.Any())
                                {
                                    <div class="row">
                                        @foreach (var tournament in gameParticipation.Value)
                                        {
                                            <div class="col-lg-6 mb-4">
                                                <div class="tournament-card border rounded p-3 h-100">
                                                    <div class="d-flex justify-content-between align-items-start mb-3">
                                                        <div>
                                                            <h6 class="mb-1">@tournament.TournamentName</h6>
                                                            <small class="text-muted">@tournament.OrganizerName</small>
                                                        </div>
                                                        @if (tournament.Placement.HasValue)
                                                        {
                                                            <span class="badge bg-@(tournament.Placement <= 3 ? "warning" : "secondary") fs-6">
                                                                @(tournament.Placement == 1 ? "🥇" : tournament.Placement == 2 ? "🥈" : tournament.Placement == 3 ? "🥉" : "#" + tournament.Placement)
                                                            </span>
        }
    </div>

                                                    <div class="row mb-3">
                                                        <div class="col-6">
                                                            <small class="text-muted">Team</small>
                                                            <div class="fw-bold">@tournament.TeamTag</div>
                                                        </div>
                                                        <div class="col-6">
                                                            <small class="text-muted">Series Record</small>
                                                            <div class="fw-bold">@tournament.SeriesWins - @tournament.SeriesLosses</div>
                                                        </div>
                                                    </div>
                                                    
                                                    <div class="row mb-3">
                                                        <div class="col-6">
                                                            <small class="text-muted">Match Record</small>
                                                            <div class="fw-bold">@tournament.MatchWins - @tournament.MatchLosses</div>
                                                        </div>
                                                        <div class="col-6">
                                                            <small class="text-muted">Prize Pool</small>
                                                            <div class="fw-bold">$@tournament.PrizePool.ToString("N0")</div>
                                                        </div>
                                                    </div>
                                                    
                                                    <div class="d-flex justify-content-between align-items-center">
                                                        <small class="text-muted">@tournament.StartDate.ToString("MMM yyyy")</small>
                                                        @if (tournament.PointsAwarded.HasValue)
                                                        {
                                                            <span class="badge bg-primary">@tournament.PointsAwarded pts</span>
                                                        }
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                }
                                else
                                {
                                    <div class="text-center py-4">
                                        <i class="fa fa-trophy fa-3x text-muted mb-3"></i>
                                        <h6 class="text-muted">No tournament participation</h6>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="card">
                        <div class="card-body text-center py-5">
                            <i class="fa fa-trophy fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">No tournament participation</h5>
                            <p class="text-muted">Tournament history will appear here once the player participates in tournaments.</p>
                        </div>
                    </div>
                }
            </div>

            <!-- Match History Tab -->
            <div class="tab-pane fade" id="matches" role="tabpanel">
                @if (Model.MatchHistoryByGame.Any())
                {
                    @foreach (var gameHistory in Model.MatchHistoryByGame.Where(kvp => string.IsNullOrEmpty(selectedGame) || kvp.Key == selectedGame))
                    {
                        <div class="card mb-4 shadow-sm">
                            <div class="card-header bg-gradient text-white">
                                <h5 class="mb-0"><i class="fa fa-gamepad me-2"></i>@gameHistory.Key Match History</h5>
                            </div>
                            <div class="card-body">
                                @if (gameHistory.Value.TournamentGroups.Any())
                                {
                                    @foreach (var tournament in gameHistory.Value.TournamentGroups)
                                    {
                                        <div class="tournament-group mb-4">
                                            <div class="tournament-header d-flex align-items-center mb-3 p-3 bg-light rounded">
                                                <div class="flex-grow-1">
                                                    <h6 class="mb-1">@tournament.TournamentName</h6>
                                                    <small class="text-muted">@tournament.OrganizerName • @tournament.StartDate.ToString("MMM yyyy")</small>
                                                </div>
                                            </div>
                                            
                                            <div class="table-responsive">
                                                <table class="table table-sm table-dark matches-table">
                                                    <thead>
                                                        <tr>
                                                            <th>Date</th>
                                                            <th>Player Team</th>
                                                            <th>Opponent</th>
                                                            <th>Map</th>
                                                            <th>K - D</th>
                                                            <th>+/-</th>
                                                            <th>Rating</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @{
                                                            int seriesIndex = 0;
                                                        }
                                                        @foreach (var series in tournament.SeriesGroups)
                                                        {
                                                            @foreach (var match in series.Matches)
                                                            {
                                                                <tr class="@(seriesIndex % 2 == 0 ? "match-row-even" : "match-row-odd") @(series.IsSeriesWinner ? "series-winner" : "series-loser")">
                                                                    <td>
                                                                        @series.DatePlayed.ToString("MMM dd, yyyy")
                                                                    </td>
                                                                    <td>
                                                                        <div class="d-flex align-items-center">
                                                                            <div class="me-2">
                                                                                <img src="@(series.PlayerTeamLogo ?? "https://via.placeholder.com/20x20/333333/ffffff?text=?")" alt="Team" style="width: 20px; height: 20px; object-fit: cover; border-radius: 3px;" />
                                                                            </div>
                                                                            <div>
                                                                                @if (match.CS2Stats != null)
                                                                                {
                                                                                    <div class="team-name">@(series.PlayerTeamTag ?? "Unknown Team") (@(match.PlayerTeamRounds ?? 0))</div>
                                                                                }
                                                                                else
                                                                                {
                                                                                    <div class="team-name">@(series.PlayerTeamTag ?? "Unknown Team")</div>
                                                                                }
                                                                            </div>
                                                                        </div>
                                                                    </td>
                                                                    <td>
                                                                        <div class="d-flex align-items-center">
                                                                            <div class="me-2">
                                                                                <img src="@(series.OpponentTeamLogo ?? "https://via.placeholder.com/20x20/333333/ffffff?text=?")" alt="Team" style="width: 20px; height: 20px; object-fit: cover; border-radius: 3px;" />
                                                                            </div>
                                                                            @if (match.CS2Stats != null)
                                                                            {
                                                                                <span>@(series.OpponentTeamTag ?? "Unknown Team") (@(match.OpponentTeamRounds ?? 0))</span>
                                                                            }
                                                                            else
                                                                            {
                                                                                <span>@(series.OpponentTeamTag ?? "Unknown Team")</span>
                                                                            }
                                                                        </div>
                                                                    </td>
                                                                    <td>@match.MapName</td>
                                                                    <td>
                                                                        @if (match.CS2Stats != null)
                                                                        {
                                                                            <span>@match.CS2Stats.Kills - @match.CS2Stats.Deaths</span>
                                                                        }
                                                                        else if (match.LoLStats != null)
                                                                        {
                                                                            <span>@match.LoLStats.Kills - @match.LoLStats.Deaths</span>
                                                                        }
                                                                    </td>
                                                                    <td>
                                                                        @if (match.CS2Stats != null)
                                                                        {
                                                                            <span class="@(match.CS2Stats.Kills - match.CS2Stats.Deaths >= 0 ? "border-success" : "text-danger")">
                                                                                @(match.CS2Stats.Kills - match.CS2Stats.Deaths >= 0 ? "+" : "")@(match.CS2Stats.Kills - match.CS2Stats.Deaths)
                                                                            </span>
                                                                        }
                                                                        else if (match.LoLStats != null)
                                                                        {
                                                                            <span class="@((match.LoLStats.Kills ?? 0) - (match.LoLStats.Deaths ?? 0) >= 0 ? "border-success" : "text-danger")">
                                                                                @((match.LoLStats.Kills ?? 0) - (match.LoLStats.Deaths ?? 0) >= 0 ? "+" : "")@((match.LoLStats.Kills ?? 0) - (match.LoLStats.Deaths ?? 0))
                                                                            </span>
                                                                        }
                                                                    </td>
                                                                    <td>
                                                                        @if (match.CS2Stats != null)
                                                                        {
                                                                            var rating = match.CS2Stats.HLTV1;
                                                                            var ratingClass = rating < 0.98 ? "rating-low" : rating <= 1.07 ? "rating-medium" : "rating-high";
                                                                            <span class="rating-value @ratingClass">@rating.ToString("F2")</span>
                                                                        }
                                                                        else if (match.LoLStats != null)
                                                                        {
                                                                            <span class="rating-value">N/A</span>
                                                                        }
                                                                    </td>
                                                                </tr>
                                                            }
                                                            seriesIndex++;
                                                        }
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    }
                                }
                                else
                                {
                                    <div class="text-center py-4">
                                        <i class="fa fa-gamepad fa-3x text-muted mb-3"></i>
                                        <h6 class="text-muted">No match history</h6>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="card">
                        <div class="card-body text-center py-5">
                            <i class="fa fa-gamepad fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">No match history</h5>
                            <p class="text-muted">Match history will appear here once the player participates in matches.</p>
                        </div>
            </div>
        }
    </div>

            <!-- Transfers Tab -->
            <div class="tab-pane fade" id="transfers" role="tabpanel">
    @if (Model.TransfersByGame.Any())
    {
                    @foreach (var gameTransfers in Model.TransfersByGame.Where(kvp => string.IsNullOrEmpty(selectedGame) || kvp.Key == selectedGame))
                    {
                        <div class="card mb-4 shadow-sm">
                            <div class="card-header bg-gradient text-white">
                                <h5 class="mb-0"><i class="fa fa-exchange me-2"></i>@gameTransfers.Key Transfers</h5>
                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Team</th>
                                <th>Position</th>
                                <th>Period</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var transfer in gameTransfers.Value)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="me-2">
                                                <img src="@(transfer.LogoURL)" alt="Team" style="width: 24px; height: 24px; object-fit: cover;" />
                                            </div>
                                            @transfer.TeamFullName
                                        </div>
                                    </td>
                                    <td>@transfer.Position</td>
                                    <td>
                                        <small>@transfer.StartDate.ToShortDateString() - @(transfer.EndDate?.ToShortDateString() ?? "Present")</small>
                                    </td>
                                    <td>
                                        <span class="badge bg-@(transfer.Status.ToString() == "Active" ? "success" : "secondary")">
                                            @transfer.Status
                                        </span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                            </div>
        </div>
                    }
    }
    else
    {
                    <div class="card">
                        <div class="card-body text-center py-5">
                            <i class="fa fa-exchange fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">No transfer history</h5>
                            <p class="text-muted">Transfer history will appear here once the player joins teams.</p>
                        </div>
                    </div>
                }

                <!-- Profile Pictures Section -->
                @if (Model.PlayerPictures.Any())
                {
                    <div class="card mt-4 shadow-sm">
                        <div class="card-header bg-gradient text-white">
                            <h5 class="mb-0"><i class="fa fa-image me-2"></i>Profile Pictures</h5>
                        </div>
                        <div class="card-body">
                            <div class="profile-pictures-grid">
                                @foreach (var pic in Model.PlayerPictures)
                                {
                                    <div class="profile-pic-item">
                                        <img src="@pic.PictureUrl" alt="Profile Picture" class="profile-pic-thumb" />
                                        <small class="text-muted d-block mt-1">@pic.DateChanged.ToString("MMM yyyy")</small>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

