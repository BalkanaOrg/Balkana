@model IEnumerable<Balkana.Data.Models.Article>

@{
    ViewData["Title"] = "Articles";
}

<h2 class="mb-4">Latest Articles</h2>

@foreach (var article in Model)
{
    <div class="card mb-4 shadow-sm">
        <div class="card-body">
            <h3 class="card-title">
                <a asp-action="Details" asp-route-id="@article.Id">@article.Title</a>
            </h3>
            <p class="text-muted">
                By @article.Author.FirstName @article.Author.LastName
                on @article.PublishedAt?.ToString("MMMM dd, yyyy")
            </p>
            <p>
                @Html.Raw(article.Content.Length > 300 ? article.Content.Substring(0, 300) + "..." : article.Content)
            </p>
            <a class="btn btn-outline-primary" asp-action="Details" asp-route-id="@article.Id">Read More</a>
        </div>
    </div>
}
