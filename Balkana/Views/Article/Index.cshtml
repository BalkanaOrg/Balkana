@model IEnumerable<Balkana.Data.Models.Article>

@{
    ViewData["Title"] = "News";
}

<div class="articles-page">
    <div class="articles-header">
        <h1 class="articles-title">Latest News</h1>
        <p class="articles-subtitle">Stay updated with the latest esports news, tournament updates, and community highlights from Balkana.</p>
    </div>

    <div class="news-grid">
        @foreach (var article in Model)
        {
            <a asp-action="Details" asp-route-id="@article.Id" class="news-card">
                <div class="news-card-thumb">
                    <img src="@article.ThumbnailUrl" alt="@article.Title" loading="lazy" />
                </div>
                <div class="news-card-content">
                    <h3 class="news-card-title">@article.Title</h3>
                    <p class="news-card-snippet">
                        @article.Content.StripHtml(150)
                    </p>
                    <div class="news-card-footer">
                        <span class="news-card-author">@article.Author.FirstName @article.Author.LastName</span>
                        <span class="news-card-date">@article.PublishedAt?.ToString("dd MMM yyyy")</span>
                    </div>
                </div>
            </a>
        }
    </div>
</div>