@model Balkana.Data.Models.Article

@{
    ViewData["Title"] = Model.Title;
}

<div class="container mt-4">
    <h1>@Model.Title</h1>
    <p class="text-muted">
        By @Model.Author.FirstName @Model.Author.LastName
        on @Model.PublishedAt?.ToString("MMMM dd, yyyy")
    </p>

    <div class="mt-3 article-content">
        @Html.Raw(Model.Content) <!-- safe if sanitized -->
    </div>
</div>
