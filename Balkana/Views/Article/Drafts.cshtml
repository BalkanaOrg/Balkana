@model IEnumerable<Balkana.Data.Models.Article>

@{
    ViewData["Title"] = "Draft Articles";
}

<div class="articles-management-page">
    <div class="articles-management-header">
        <div>
            <h1 class="articles-management-title">Draft Articles</h1>
            <p class="articles-management-subtitle">Review and publish pending article drafts</p>
        </div>
        <a asp-action="Create" class="btn-modern btn-modern-primary">
            <i class="fi fi-rr-plus"></i>
            New Article
        </a>
    </div>

    <div class="articles-management-grid">
        @foreach (var article in Model)
        {
            <div class="article-management-card">
                @if (!string.IsNullOrEmpty(article.ThumbnailUrl))
                {
                    <div class="article-management-thumb">
                        <img src="@article.ThumbnailUrl" alt="@article.Title" />
                    </div>
                }
                <div class="article-management-content">
                    <h3 class="article-management-title">@article.Title</h3>
                    <div class="article-management-meta">
                        <span class="article-status-badge article-status-draft">
                            <i class="fi fi-rr-clock"></i>
                            @article.Status
                        </span>
                        <span class="article-meta-item">
                            <i class="fi fi-rr-user"></i>
                            By: @(article.Author.FirstName + " " + article.Author.LastName)
                        </span>
                        <span class="article-meta-item">
                            <i class="fi fi-rr-calendar"></i>
                            Created: @article.CreatedAt.ToString("MMM dd, yyyy")
                        </span>
                    </div>
                    <div class="article-management-actions">
                        <a asp-action="Details" asp-route-id="@article.Id" class="btn-action btn-action-view">
                            <i class="fi fi-rr-eye"></i>
                            View
                        </a>
                        <a asp-action="Publish" asp-route-id="@article.Id" class="btn-action btn-action-publish">
                            <i class="fi fi-rr-globe"></i>
                            Publish
                        </a>
                        @if (User.IsInRole("Editor"))
                        {
                            <form asp-action="Unpublish" asp-route-id="@article.Id" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn-action btn-action-secondary">
                                    <i class="fi fi-rr-lock"></i>
                                    Unpublish
                                </button>
                            </form>
                            <form asp-action="Delete" asp-route-id="@article.Id" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn-action btn-action-danger">
                                    <i class="fi fi-rr-trash"></i>
                                    Delete
                                </button>
                            </form>
                        }
                    </div>
                </div>
            </div>
        }
    </div>

    @if (!Model.Any())
    {
        <div class="empty-state">
            <i class="fi fi-rr-document"></i>
            <h3>No draft articles</h3>
            <p>All articles have been published or there are no drafts available</p>
        </div>
    }
</div>
