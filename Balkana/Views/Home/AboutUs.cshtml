@{
    ViewData["Title"] = "About Balkana";
}

<section class="about-page">
    <div class="about-hero">
        <div class="about-hero-badge">Behind the Arena</div>
        <h1 class="about-hero-title">The Team<br />Behind <span>Balkana</span></h1>
        <p class="about-hero-subtitle">
            Generic description about the people, story and vision behind the project.
            Replace this text with your own copy about how Balkana started, who is involved
            and why you care about the Balkan esports scene.
        </p>

        <div class="about-hero-stats">
            <div class="about-chip">
                <span class="about-chip-label">Founded</span>
                <span class="about-chip-value">2024</span>
            </div>
            <div class="about-chip">
                <span class="about-chip-label">Based in</span>
                <span class="about-chip-value">Sofia, Bulgaria</span>
            </div>
            <div class="about-chip">
                <span class="about-chip-label">Focus</span>
                <span class="about-chip-value">Balkan Esports</span>
            </div>
        </div>
    </div>

    <section class="about-carousel-section">
        <div class="about-section-header">
            <h2 class="section-title">People &amp; Purpose</h2>
            <p class="about-section-subtitle">
                Use this carousel to introduce the different owners of the project, your mission,
                values and long–term goals. All content here is intentionally generic so you can
                easily swap in your own details.
            </p>
        </div>

        <div class="about-carousel" data-carousel>
            <button class="about-carousel-arrow left" type="button" aria-label="Previous slide" data-carousel-prev>
                <i class="fi fi-rr-angle-small-left"></i>
            </button>

            <div class="about-carousel-track" data-carousel-track>
                <article class="about-carousel-card is-active">
                    <div class="about-owner-avatar">
                        <span class="about-owner-initials">O1</span>
                    </div>
                    <h3 class="about-owner-name">Simeon "1Bulgarian" Markov</h3>
                    <p class="about-owner-role">Owner & Organizer</p>
                    <p class="about-owner-bio">
                        Simeon “1Bulgarian” Markov is the 22-year-old founder and owner of Balkana, a growing esports tournament organizer. An esports fan since 2018, he turned his passion into action by organizing and casting tournaments, helping build a competitive platform for players in the region. Through Balkana, Simeon combines community-driven organization with on-air casting, contributing actively to the development and visibility of the esports scene.
                    </p>
                    <div class="about-owner-tags">
                        <span class="about-tag">Leadership</span>
                        <span class="about-tag">Strategy</span>
                        <span class="about-tag">Community</span>
                    </div>
                </article>

                <article class="about-carousel-card">
                    <div class="about-owner-avatar">
                        <span class="about-owner-initials">O2</span>
                    </div>
                    <h3 class="about-owner-name">Daniel "Danchouu_" Kirev</h3>
                    <p class="about-owner-role">Co-Organizer & Streamer</p>
                    <p class="about-owner-bio">
                        The first believer in our project, that put his money where his mouth is. The first sponsor of a Balkana Tournament. Former player, turned broadcaster and organizer, he demonstrated the loyalty that Balkana desperately needed to kickstart our circuit.
                    </p>
                    <div class="about-owner-tags">
                        <span class="about-tag">Operations</span>
                        <span class="about-tag">Financing</span>
                        <span class="about-tag">Player Experience</span>
                    </div>
                </article>

                <article class="about-carousel-card">
                    <div class="about-owner-avatar">
                        <span class="about-owner-initials">O3</span>
                    </div>
                    <h3 class="about-owner-name">Kristo "Meally1g" Vukadinov</h3>
                    <p class="about-owner-role">Co-Owner & Streamer</p>
                    <p class="about-owner-bio">
                        A massive voice in the sphere of Bulgarian Streamers. Long-term believer of the project. 
                    </p>
                    <div class="about-owner-tags">
                        <span class="about-tag">Engagement</span>
                        <span class="about-tag">Storytelling</span>
                        <span class="about-tag">Brand</span>
                    </div>
                </article>

                <article class="about-carousel-card">
                    <div class="about-owner-avatar">
                        <span class="about-owner-initials">O4</span>
                    </div>
                    <h3 class="about-owner-name">Mihail "Demolition" Yordanov</h3>
                    <p class="about-owner-role">Commisioner</p>
                    <p class="about-owner-bio">
                        A massive voice in the sphere of Bulgarian Streamers. Long-term believer of the project
                    </p>
                    <div class="about-owner-tags">
                        <span class="about-tag">Organization</span>
                        <span class="about-tag">Structure</span>
                        <span class="about-tag">Stability</span>
                    </div>
                </article>

                <article class="about-carousel-card">
                    <div class="about-icon-circle">
                        <i class="fi fi-rr-bullseye"></i>
                    </div>
                    <h3 class="about-owner-name">Our Purpose</h3>
                    <p class="about-owner-bio">
                        Balkana was created in order to develop young and
                        Generic statement about why Balkana exists. Replace with your own purpose:
                        giving Balkan players a professional stage, connecting local scenes, and
                        raising the bar for production, fairness and player care.
                    </p>
                    <ul class="about-list">
                        <li>Give regional players consistent, well–run competitions.</li>
                        <li>Connect communities across countries and languages.</li>
                        <li>Showcase local talent to teams, brands and viewers.</li>
                    </ul>
                </article>

                <article class="about-carousel-card">
                    <div class="about-icon-circle">
                        <i class="fi fi-rr-diamond"></i>
                    </div>
                    <h3 class="about-owner-name">What We Stand For</h3>
                    <p class="about-owner-bio">
                        Generic value statement. Swap this text with 2–3 strong sentences about
                        integrity, competitive excellence and community focus that define how you
                        make decisions.
                    </p>
                    <ul class="about-list">
                        <li>Competitive integrity – clear rules, transparent rulings.</li>
                        <li>Player–first mindset – formats, schedules and communication that respect teams.</li>
                        <li>Regional pride – celebrating Balkan identity without excluding anyone.</li>
                    </ul>
                </article>
            </div>

            <button class="about-carousel-arrow right" type="button" aria-label="Next slide" data-carousel-next>
                <i class="fi fi-rr-angle-small-right"></i>
            </button>
        </div>

        <div class="about-carousel-dots" data-carousel-dots>
            <!-- Dots are generated by JS -->
        </div>
    </section>

    <section class="about-pillars-section">
        <div class="about-pillar-card">
            <h3 class="about-pillar-title">Competitive Excellence</h3>
            <p class="about-pillar-text">
                Generic copy about how you structure formats, brackets and rules to make
                competition feel serious, fair and worth grinding for. Replace this with
                concrete principles and examples from your events.
            </p>
        </div>
        <div class="about-pillar-card">
            <h3 class="about-pillar-title">Community &amp; Culture</h3>
            <p class="about-pillar-text">
                Generic text about Discord, watch parties, memes and traditions that make
                your ecosystem feel like “home” for Balkan players and fans. Customize to
                match your real community touchpoints.
            </p>
        </div>
        <div class="about-pillar-card">
            <h3 class="about-pillar-title">Long–Term Vision</h3>
            <p class="about-pillar-text">
                Generic description of where you want Balkana to be in 3–5 years – more
                games, bigger stages, partnerships, LANs, academies or anything else you
                are aiming for.
            </p>
        </div>
    </section>
</section>

@section Styles {
    <style>
        .about-page {
            padding: 100px 40px 80px;
            max-width: 1400px;
            margin: 0 auto;
        }

        .about-hero {
            position: relative;
            padding: 40px 30px 50px;
            border-radius: 32px;
            background:
                radial-gradient(circle at 0% 0%, rgba(45, 27, 105, 0.55) 0%, transparent 55%),
                radial-gradient(circle at 100% 100%, rgba(139, 0, 0, 0.55) 0%, transparent 55%),
                linear-gradient(135deg, rgba(0, 0, 0, 0.85), rgba(0, 0, 0, 0.75));
            border: 1px solid rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(22px);
            box-shadow: 0 24px 60px rgba(0, 0, 0, 0.6);
            overflow: hidden;
            margin-bottom: 60px;
        }

        .about-hero::before {
            content: '';
            position: absolute;
            inset: -40%;
            background: conic-gradient(
                from 220deg,
                rgba(45, 27, 105, 0.2),
                rgba(139, 0, 0, 0.25),
                transparent 40%,
                transparent 80%,
                rgba(45, 27, 105, 0.2)
            );
            opacity: 0.4;
            animation: aboutGlow 18s linear infinite;
        }

        .about-hero > * {
            position: relative;
            z-index: 1;
        }

        .about-hero-badge {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            padding: 8px 16px;
            border-radius: 999px;
            background: rgba(0, 0, 0, 0.5);
            border: 1px solid rgba(255, 255, 255, 0.2);
            font-size: 0.8rem;
            letter-spacing: 0.12em;
            text-transform: uppercase;
            color: rgba(255, 255, 255, 0.85);
            margin-bottom: 18px;
        }

        .about-hero-title {
            font-size: clamp(2.5rem, 4vw, 3.5rem);
            font-weight: 900;
            line-height: 1.05;
            margin-bottom: 18px;
        }

        .about-hero-title span {
            background: linear-gradient(45deg, #ffffff, #2d1b69, #8b0000);
            background-clip: text;
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            text-shadow: 0 0 40px rgba(45, 27, 105, 0.5);
        }

        .about-hero-subtitle {
            max-width: 650px;
            font-size: 1.05rem;
            line-height: 1.7;
            color: rgba(255, 255, 255, 0.9);
            margin-bottom: 28px;
        }

        .about-hero-stats {
            display: flex;
            flex-wrap: wrap;
            gap: 12px;
        }

        .about-chip {
            padding: 10px 16px;
            border-radius: 999px;
            background: rgba(0, 0, 0, 0.55);
            border: 1px solid rgba(255, 255, 255, 0.15);
            display: inline-flex;
            flex-direction: column;
            min-width: 140px;
        }

        .about-chip-label {
            font-size: 0.7rem;
            text-transform: uppercase;
            letter-spacing: 0.14em;
            color: rgba(255, 255, 255, 0.5);
        }

        .about-chip-value {
            font-size: 0.95rem;
            font-weight: 600;
        }

        .about-section-header {
            max-width: 900px;
            margin: 0 auto 40px;
            text-align: center;
        }

        .about-section-subtitle {
            margin-top: 12px;
            font-size: 0.98rem;
            color: rgba(255, 255, 255, 0.75);
            line-height: 1.7;
        }

        .about-carousel-section {
            margin-bottom: 60px;
        }

        .about-carousel {
            position: relative;
            border-radius: 26px;
            background: linear-gradient(
                135deg,
                rgba(255, 255, 255, 0.06),
                rgba(255, 255, 255, 0.02)
            );
            border: 1px solid rgba(255, 255, 255, 0.12);
            backdrop-filter: blur(22px);
            overflow: hidden;
        }

        .about-carousel-track {
            display: flex;
            transition: transform 0.6s cubic-bezier(0.22, 0.61, 0.36, 1);
            will-change: transform;
        }

        .about-carousel-card {
            min-width: 100%;
            padding: 40px 32px 36px;
            opacity: 0.35;
            transform: scale(0.96);
            transition: opacity 0.4s ease, transform 0.4s ease;
        }

        .about-carousel-card.is-active {
            opacity: 1;
            transform: scale(1);
        }

        .about-owner-avatar,
        .about-icon-circle {
            width: 72px;
            height: 72px;
            border-radius: 999px;
            background: radial-gradient(circle at 30% 20%, #ffffff, #8b0000);
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 14px 30px rgba(0, 0, 0, 0.45);
            margin-bottom: 20px;
        }

        .about-owner-initials {
            font-weight: 800;
            font-size: 1.4rem;
            letter-spacing: 0.08em;
        }

        .about-icon-circle i {
            font-size: 1.6rem;
        }

        .about-owner-name {
            font-size: 1.6rem;
            font-weight: 800;
            margin-bottom: 6px;
        }

        .about-owner-role {
            font-size: 0.95rem;
            color: rgba(255, 255, 255, 0.7);
            margin-bottom: 18px;
        }

        .about-owner-bio {
            font-size: 0.98rem;
            line-height: 1.7;
            color: rgba(255, 255, 255, 0.88);
            margin-bottom: 18px;
            max-width: 720px;
        }

        .about-owner-tags {
            display: flex;
            flex-wrap: wrap;
            gap: 8px;
            margin-top: 4px;
        }

        .about-tag {
            font-size: 0.78rem;
            padding: 6px 12px;
            border-radius: 999px;
            border: 1px solid rgba(255, 255, 255, 0.22);
            background: rgba(0, 0, 0, 0.4);
            text-transform: uppercase;
            letter-spacing: 0.12em;
        }

        .about-list {
            margin: 0;
            padding-left: 1.1rem;
            color: rgba(255, 255, 255, 0.88);
            font-size: 0.95rem;
            line-height: 1.7;
        }

        .about-list li {
            margin-bottom: 6px;
        }

        .about-carousel-arrow {
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
            width: 42px;
            height: 42px;
            border-radius: 999px;
            border: 1px solid rgba(255, 255, 255, 0.3);
            background: rgba(0, 0, 0, 0.75);
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            z-index: 2;
            transition: all 0.25s ease;
        }

        .about-carousel-arrow.left {
            left: 18px;
        }

        .about-carousel-arrow.right {
            right: 18px;
        }

        .about-carousel-arrow:hover {
            background: linear-gradient(135deg, #2d1b69, #8b0000);
            box-shadow: 0 10px 24px rgba(0, 0, 0, 0.5);
            transform: translateY(-50%) scale(1.03);
        }

        .about-carousel-arrow i {
            font-size: 1.3rem;
        }

        .about-carousel-dots {
            display: flex;
            justify-content: center;
            gap: 8px;
            margin-top: 14px;
        }

        .about-carousel-dot {
            width: 9px;
            height: 9px;
            border-radius: 999px;
            background: rgba(255, 255, 255, 0.35);
            border: none;
            padding: 0;
            cursor: pointer;
            transition: all 0.22s ease;
        }

        .about-carousel-dot.is-active {
            width: 26px;
            background: linear-gradient(90deg, #2d1b69, #8b0000);
        }

        .about-pillars-section {
            margin-top: 40px;
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
            gap: 22px;
        }

        .about-pillar-card {
            padding: 22px 20px 24px;
            border-radius: 20px;
            background: linear-gradient(
                145deg,
                rgba(255, 255, 255, 0.06),
                rgba(255, 255, 255, 0.02)
            );
            border: 1px solid rgba(255, 255, 255, 0.12);
            backdrop-filter: blur(16px);
            box-shadow: 0 16px 38px rgba(0, 0, 0, 0.45);
        }

        .about-pillar-title {
            font-size: 1.15rem;
            font-weight: 800;
            margin-bottom: 10px;
        }

        .about-pillar-text {
            font-size: 0.95rem;
            line-height: 1.7;
            color: rgba(255, 255, 255, 0.82);
        }

        @@keyframes aboutGlow {
            0% {
                transform: rotate(0deg);
            }
            100% {
                transform: rotate(360deg);
            }
        }

        @@media (max-width: 992px) {
            .about-page {
                padding: 80px 24px 70px;
            }

            .about-hero {
                padding: 32px 22px 34px;
                border-radius: 24px;
            }

            .about-carousel-card {
                padding: 32px 20px 30px;
            }
        }

        @@media (max-width: 768px) {
            .about-page {
                padding: 72px 18px 60px;
            }

            .about-hero-stats {
                flex-direction: column;
                align-items: flex-start;
            }

            .about-carousel-arrow {
                width: 38px;
                height: 38px;
            }

            .about-carousel-arrow.left {
                left: 10px;
            }

            .about-carousel-arrow.right {
                right: 10px;
            }
        }

        @@media (max-width: 480px) {
            .about-hero-title {
                font-size: 2.1rem;
            }
        }
    </style>
}


