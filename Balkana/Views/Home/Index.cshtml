@model List<Balkana.Data.Models.Article>
@{
    ViewData["Title"] = "Home Page";
}

<!-- Hero Section -->
<section class="hero" id="home">
    <div class="hero-content">
        <div class="tournament-date">15 JULY - 30 AUGUST 2025</div>
        <h1 class="hero-title">BALKANA<br></h1>

        <div class="stats-container">
            <div class="stat-card">
                <span class="stat-number">@ViewData["PlayerCount"]</span>
                <div class="stat-label">Players</div>
            </div>
            <div class="stat-card">
                <span class="stat-number">€@ViewData["PrizePool"]</span>
                <div class="stat-label">Total Prize Pool</div>
            </div>
            <div class="stat-card">
                <span class="stat-number">@ViewData["GamesCount"]</span>
                <div class="stat-label">Games</div>
            </div>
        </div>

        <p class="hero-description">
            The ultimate Balkan gaming championship featuring the region's best players competing across multiple titles for glory and massive prizes.
        </p>

        <button class="cta-button" onclick="scrollToGames()">Join Tournament</button>
    </div>
</section>

<!-- Games Section -->
<section class="games-section" id="games">
    <h2 class="section-title">Featured Games</h2>

    <div class="games-grid">
        <div class="game-card">
            <div class="game-logo">LoL</div>
            <h6 class="game-title">League of Legends</h6>
            <div class="game-prize">$150,000 Prize Pool</div>
            <p class="game-description">
                Battle on the Rift in the most popular MOBA. 5v5 strategic gameplay with over 160 champions to master.
            </p>
            <button class="register-btn"><a asp-action="LeagueOfLegends" asp-controller="Home">Check it out!</a></button>
        </div>

        <div class="game-card">
            <div class="game-logo">CS</div>
            <h6 class="game-title">Counter-Strike</h6>
            <div class="game-prize">$125,000 Prize Pool</div>
            <p class="game-description">
                Tactical FPS at its finest. Precise aim, perfect teamwork, and strategic execution determine victory.
            </p>
            <button class="register-btn"><a asp-action="CounterStrike" asp-controller="Home">Check it out!</a></button>
        </div>

        <div class="game-card">
            <div class="game-logo">VAL</div>
            <h6 class="game-title">Valorant</h6>
            <div class="game-prize">$125,000 Prize Pool</div>
            <p class="game-description">
                Character-based tactical shooter. Unique abilities meet precise gunplay in intense 5v5 matches.
            </p>
            <button class="register-btn"><a asp-action="Valorant" asp-controller="Home">Check it out!</a></button>
        </div>

        <div class="game-card">
            <div class="game-logo">R6</div>
            <h6 class="game-title">Rainbow Six Siege</h6>
            <div class="game-prize">$100,000 Prize Pool</div>
            <p class="game-description">
                A tactical 5v5 shooter focused on close-quarters combat, strategic team play, and destructible environments.
            </p>
            <button class="register-btn"><a asp-action="RainbowSixSiege" asp-controller="Home">Check it out!</a></button>
        </div>
    </div>
</section>

<!-- News Section -->
<section class="news-section" id="news">
    <div class="news-header">
        <h2 class="news-title">Latest Tournament News</h2>
        <a href="/Article/Index" class="see-all">See All News →</a>
    </div>
    <p class="news-subtitle">Stay on top of the action! Get the latest updates, match results, and player highlights.</p>

    <div class="news-grid">
        @foreach (var article in Model)
        {
            <a href="/Article/Details/@article.Id" class="news-card">
                <div class="news-card-thumb">
                    <img src="@article.ThumbnailUrl" alt="@article.Title" />
                </div>
                <div class="news-card-content">
                    <h3 class="news-card-title">@article.Title</h3>
                    <p class="news-card-snippet">
                        @article.Content.StripHtml(120)
                    </p>
                    <div class="news-card-footer">
                        <span class="news-card-author">By @article.Author.FirstName @article.Author.LastName</span>
                        <span class="news-card-date">@article.PublishedAt?.ToString("dd MMM yyyy")</span>
                    </div>
                </div>
            </a>
        }
    </div>
</section>
