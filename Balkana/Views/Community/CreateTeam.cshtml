@model Balkana.Models.Community.CreateCommunityTeamModel

<h2>Create Community Team</h2>

<form asp-action="CreateTeam" method="post">
    <div class="form-group">
        <label asp-for="FullName"></label>
        <input asp-for="FullName" class="form-control" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Tag"></label>
        <input asp-for="Tag" class="form-control" />
        <span asp-validation-for="Tag" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="LogoUrl"></label>
        <input asp-for="LogoUrl" class="form-control" />
        <span asp-validation-for="LogoUrl" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="GameId"></label>
        <select asp-for="GameId" asp-items="Model.Games" class="form-control"></select>
        <span asp-validation-for="GameId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>