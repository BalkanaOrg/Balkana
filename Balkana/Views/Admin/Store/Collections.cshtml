@model List<Balkana.Data.Models.Store.Collection>

@{
    ViewData["Title"] = "Store Collections";
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-white">
            <i class="fas fa-layer-group"></i> Store Collections
        </h2>
        <div>
            <a asp-action="CreateCollection" class="btn btn-success">
                <i class="fas fa-plus"></i> Create Collection
            </a>
            <a asp-action="StoreProducts" class="btn btn-outline-light">
                <i class="fas fa-box"></i> Products
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model.Any())
    {
        <div class="row">
            @foreach (var collection in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card bg-dark border-primary h-100">
                        @if (!string.IsNullOrEmpty(collection.BannerImageUrl))
                        {
                            <img src="@collection.BannerImageUrl" class="card-img-top" alt="@collection.Name" style="height: 200px; object-fit: cover;">
                        }
                        else
                        {
                            <div class="card-img-top bg-secondary d-flex align-items-center justify-content-center" style="height: 200px;">
                                <i class="fas fa-layer-group fa-3x text-white-50"></i>
                            </div>
                        }
                        
                        <div class="card-body">
                            <div class="mb-2">
                                @if (collection.IsFeatured)
                                {
                                    <span class="badge bg-warning text-dark">Featured</span>
                                }
                                @if (collection.IsActive)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Inactive</span>
                                }
                            </div>
                            
                            <h5 class="card-title text-white">@collection.Name</h5>
                            
                            @if (!string.IsNullOrEmpty(collection.Season))
                            {
                                <p class="text-info mb-2"><i class="fas fa-calendar"></i> @collection.Season</p>
                            }
                            
                            <p class="card-text text-light">@collection.Description</p>
                            
                            <div class="text-muted small">
                                <p class="mb-1">Products: <span class="badge bg-primary">@collection.ProductCollections.Count</span></p>
                                <p class="mb-1">Created: @collection.CreatedAt.ToString("dd MMM yyyy")</p>
                                @if (collection.StartDate.HasValue)
                                {
                                    <p class="mb-0">Active: @collection.StartDate.Value.ToString("dd MMM") - @(collection.EndDate?.ToString("dd MMM yyyy") ?? "Ongoing")</p>
                                }
                            </div>
                        </div>
                        
                        <div class="card-footer bg-transparent border-top border-secondary">
                            <div class="d-flex gap-2">
                                <a href="/store/collection/@collection.Slug" class="btn btn-sm btn-outline-info" target="_blank">
                                    <i class="fas fa-eye"></i> View
                                </a>
                                <button class="btn btn-sm btn-outline-danger" onclick="if(confirm('Deactivate collection?')) { /* TODO */ }">
                                    <i class="fas fa-toggle-off"></i> Deactivate
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="fas fa-info-circle"></i> No collections yet. Create your first collection!
        </div>
    }
</div>

@section Styles {
    <style>
        .card {
            background-color: #1a1a1a !important;
            transition: transform 0.2s;
        }
        .card:hover {
            transform: translateY(-5px);
        }
    </style>
}

