@model List<Balkana.Data.Models.Store.Product>

@{
    ViewData["Title"] = "Manage Products";
}

@section Styles {
    <link rel="stylesheet" href="~/css/store.css" asp-append-version="true" />
    <style>
        .card { background-color: #1a1a1a !important; }
        .form-control:focus, .form-select:focus {
            background-color: #2a2a2a;
            color: white !important;
            border-color: #0d6efd;
        }
        .table-dark {
            background-color: #1a1a1a;
        }
        .btn {
            border-radius: 8px;
            transition: all 0.3s ease;
        }
        .btn:hover {
            transform: translateY(-2px);
        }
    </style>
}

<div class="store-container">
    <div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-white"><i class="fas fa-store"></i> Store Products</h2>
        <div>
            <a asp-action="CreateProduct" class="btn btn-success">
                <i class="fas fa-plus"></i> Add New Product
            </a>
            <a asp-action="StoreCollections" class="btn btn-info">
                <i class="fas fa-layer-group"></i> Manage Collections
            </a>
            <a asp-action="Inventory" class="btn btn-warning">
                <i class="fas fa-warehouse"></i> Inventory
            </a>
            <a asp-action="StoreOrders" class="btn btn-primary">
                <i class="fas fa-shopping-bag"></i> Orders
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-dark table-striped table-hover">
                <thead class="table-primary text-dark">
                    <tr>
                        <th>Image</th>
                        <th>Name</th>
                        <th>Category</th>
                        <th>SKU</th>
                        <th>Base Price</th>
                        <th>Variants</th>
                        <th>Total Stock</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model)
                    {
                        var totalStock = product.Variants.Sum(v => v.StockQuantity);
                        var lowStock = product.Variants.Any(v => v.StockQuantity <= v.LowStockThreshold && v.StockQuantity > 0);
                        
                        <tr class="@(lowStock ? "table-warning" : "")">
                            <td>
                                @if (!string.IsNullOrEmpty(product.MainImageUrl))
                                {
                                    <img src="@product.MainImageUrl" alt="@product.Name" style="width: 60px; height: 60px; object-fit: cover;">
                                }
                            </td>
                            <td>
                                <strong>@product.Name</strong>
                                @if (product.IsFeatured)
                                {
                                    <span class="badge bg-warning text-dark">Featured</span>
                                }
                                @if (product.TeamId.HasValue)
                                {
                                    <br><small class="text-muted">Team: @product.Team?.Tag</small>
                                }
                                @if (product.PlayerId.HasValue)
                                {
                                    <br><small class="text-muted">Player: @product.Player?.Nickname</small>
                                }
                            </td>
                            <td>@product.Category.Name</td>
                            <td><code>@product.SKU</code></td>
                            <td>@product.BasePrice.ToString("F2") BGN</td>
                            <td>
                                <span class="badge bg-primary">@product.Variants.Count variants</span>
                            </td>
                            <td>
                                @if (totalStock == 0)
                                {
                                    <span class="badge bg-danger">Out of Stock</span>
                                }
                                else if (lowStock)
                                {
                                    <span class="badge bg-warning text-dark">@totalStock (Low Stock)</span>
                                }
                                else
                                {
                                    <span class="badge bg-success">@totalStock</span>
                                }
                            </td>
                            <td>
                                @if (product.IsActive)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Inactive</span>
                                }
                            </td>
                            <td>
                                <div class="btn-group btn-group-sm">
                                    <a asp-action="ProductVariants" asp-route-id="@product.Id" class="btn btn-info" title="Manage Variants">
                                        <i class="fas fa-list"></i>
                                    </a>
                                    <a href="/store/product/@product.Slug" class="btn btn-secondary" target="_blank" title="View on Store">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="fas fa-info-circle"></i> No products yet. Create your first product to get started!
        </div>
    }
    </div>
</div>

