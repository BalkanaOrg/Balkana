@model Balkana.Data.Models.Store.Order

@{
    ViewData["Title"] = "Order " + Model.OrderNumber;
    var customerName = !string.IsNullOrEmpty(Model.GuestFirstName) 
        ? $"{Model.GuestFirstName} {Model.GuestLastName}"
        : Model.User != null ? $"{Model.User.FirstName} {Model.User.LastName}" : "Unknown";
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="text-white">Order #@Model.OrderNumber</h2>
            <p class="text-muted">Placed on @Model.CreatedAt.ToString("dd MMMM yyyy, HH:mm")</p>
        </div>
        <a asp-action="StoreOrders" class="btn btn-outline-light">
            <i class="fas fa-arrow-left"></i> Back to Orders
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <!-- Order Details -->
        <div class="col-md-8">
            <!-- Status Cards -->
            <div class="row mb-4">
                <div class="col-md-4">
                    <div class="card bg-dark border-primary">
                        <div class="card-body text-center">
                            <h6 class="text-white">Order Status</h6>
                            <span class="badge bg-@(Model.Status switch 
                            {
                                Balkana.Data.Models.Store.OrderStatus.Pending => "warning",
                                Balkana.Data.Models.Store.OrderStatus.Confirmed => "info",
                                Balkana.Data.Models.Store.OrderStatus.Shipped => "primary",
                                Balkana.Data.Models.Store.OrderStatus.Delivered => "success",
                                Balkana.Data.Models.Store.OrderStatus.Cancelled => "danger",
                                _ => "secondary"
                            }) fs-5">
                                @Model.Status.ToString()
                            </span>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card bg-dark border-success">
                        <div class="card-body text-center">
                            <h6 class="text-white">Payment Status</h6>
                            <span class="badge bg-@(Model.PaymentStatus == Balkana.Data.Models.Store.PaymentStatus.Paid ? "success" : "warning") fs-5">
                                @Model.PaymentStatus.ToString()
                            </span>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card bg-dark border-info">
                        <div class="card-body text-center">
                            <h6 class="text-white">Total Amount</h6>
                            <h4 class="text-info mb-0">@Model.TotalAmount.ToString("F2") @Model.Currency</h4>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Order Items -->
            <div class="card bg-dark border-primary mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Order Items</h5>
                </div>
                <div class="card-body">
                    <table class="table table-dark">
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th>Price</th>
                                <th>Qty</th>
                                <th class="text-end">Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.OrderItems)
                            {
                                <tr>
                                    <td>
                                        <strong class="text-white">@item.ProductName</strong><br>
                                        <small class="text-muted">@item.VariantName</small><br>
                                        <small class="text-muted">SKU: @item.SKU</small>
                                    </td>
                                    <td class="text-white">@item.UnitPrice.ToString("F2") BGN</td>
                                    <td class="text-white">@item.Quantity</td>
                                    <td class="text-end text-white"><strong>@item.TotalPrice.ToString("F2") BGN</strong></td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr class="border-top border-secondary">
                                <td colspan="3" class="text-end text-white">Subtotal:</td>
                                <td class="text-end text-white">@Model.SubTotal.ToString("F2") BGN</td>
                            </tr>
                            <tr>
                                <td colspan="3" class="text-end text-white">Shipping:</td>
                                <td class="text-end text-white">@Model.ShippingCost.ToString("F2") BGN</td>
                            </tr>
                            <tr>
                                <td colspan="3" class="text-end text-white">Tax (VAT 20%):</td>
                                <td class="text-end text-white">@Model.Tax.ToString("F2") BGN</td>
                            </tr>
                            <tr class="table-primary">
                                <td colspan="3" class="text-end"><strong>TOTAL:</strong></td>
                                <td class="text-end"><strong>@Model.TotalAmount.ToString("F2") @Model.Currency</strong></td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>

            <!-- Customer & Shipping Info -->
            <div class="row">
                <div class="col-md-6">
                    <div class="card bg-dark border-info mb-4">
                        <div class="card-header bg-info text-dark">
                            <h6 class="mb-0">Customer Information</h6>
                        </div>
                        <div class="card-body text-white">
                            <p><strong>@customerName</strong></p>
                            <p class="mb-1">
                                <i class="fas fa-envelope"></i> 
                                @(Model.User?.Email ?? Model.GuestEmail)
                            </p>
                            <p class="mb-0">
                                <i class="fas fa-phone"></i> 
                                @Model.GuestPhone
                            </p>
                            @if (Model.User == null)
                            {
                                <span class="badge bg-secondary mt-2">Guest Order</span>
                            }
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card bg-dark border-warning mb-4">
                        <div class="card-header bg-warning text-dark">
                            <h6 class="mb-0">Shipping Address</h6>
                        </div>
                        <div class="card-body text-white">
                            <p class="mb-1">@Model.ShippingAddress</p>
                            <p class="mb-1">@Model.ShippingCity @Model.ShippingPostalCode</p>
                            <p class="mb-3">@Model.ShippingCountry</p>
                            
                            <p class="mb-1">
                                <strong>Delivery:</strong> @Model.DeliveryProvider.ToString()
                            </p>
                            @if (!string.IsNullOrEmpty(Model.DeliveryOfficeAddress))
                            {
                                <p class="mb-0 text-muted">Office: @Model.DeliveryOfficeAddress</p>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Actions Sidebar -->
        <div class="col-md-4">
            <!-- Update Status -->
            <div class="card bg-dark border-primary mb-3">
                <div class="card-header bg-primary text-white">
                    <h6 class="mb-0">Update Order Status</h6>
                </div>
                <div class="card-body">
                    <form asp-action="UpdateOrderStatus" asp-route-id="@Model.Id" method="post">
                        @Html.AntiForgeryToken()
                        
                        <div class="mb-3">
                            <label class="form-label text-white">New Status:</label>
                            <select name="newStatus" class="form-select bg-dark text-white border-secondary">
                                <option value="@Balkana.Data.Models.Store.OrderStatus.Confirmed">Confirmed</option>
                                <option value="@Balkana.Data.Models.Store.OrderStatus.Processing">Processing</option>
                                <option value="@Balkana.Data.Models.Store.OrderStatus.Shipped">Shipped</option>
                                <option value="@Balkana.Data.Models.Store.OrderStatus.Delivered">Delivered</option>
                                <option value="@Balkana.Data.Models.Store.OrderStatus.Cancelled">Cancelled</option>
                            </select>
                        </div>
                        
                        <div class="mb-3">
                            <label class="form-label text-white">Admin Notes:</label>
                            <textarea name="notes" class="form-control bg-dark text-white border-secondary" rows="2"></textarea>
                        </div>
                        
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="fas fa-sync"></i> Update Status
                        </button>
                    </form>
                </div>
            </div>

            <!-- Add Tracking -->
            @if (Model.Status != Balkana.Data.Models.Store.OrderStatus.Cancelled && string.IsNullOrEmpty(Model.TrackingNumber))
            {
                <div class="card bg-dark border-success mb-3">
                    <div class="card-header bg-success text-white">
                        <h6 class="mb-0">Add Tracking Number</h6>
                    </div>
                    <div class="card-body">
                        <form asp-action="AddTracking" asp-route-id="@Model.Id" method="post">
                            @Html.AntiForgeryToken()
                            
                            <div class="mb-3">
                                <input type="text" name="trackingNumber" class="form-control bg-dark text-white border-secondary" placeholder="EKONT-20250114-12345" required />
                            </div>
                            
                            <button type="submit" class="btn btn-success w-100">
                                <i class="fas fa-truck"></i> Add & Mark as Shipped
                            </button>
                        </form>
                    </div>
                </div>
            }
            else if (!string.IsNullOrEmpty(Model.TrackingNumber))
            {
                <div class="card bg-dark border-info mb-3">
                    <div class="card-header bg-info text-dark">
                        <h6 class="mb-0">Tracking Information</h6>
                    </div>
                    <div class="card-body text-white">
                        <p class="mb-1"><strong>Tracking #:</strong></p>
                        <p><code class="text-info">@Model.TrackingNumber</code></p>
                        @if (Model.ShippedDate.HasValue)
                        {
                            <p class="mb-0"><small>Shipped: @Model.ShippedDate.Value.ToString("dd MMM yyyy")</small></p>
                        }
                    </div>
                </div>
            }

            <!-- Payment Info -->
            <div class="card bg-dark border-warning">
                <div class="card-header bg-warning text-dark">
                    <h6 class="mb-0">Payment Information</h6>
                </div>
                <div class="card-body text-white">
                    <p><strong>Method:</strong> @Model.PaymentMethod.ToString()</p>
                    <p><strong>Status:</strong> 
                        <span class="badge bg-@(Model.PaymentStatus == Balkana.Data.Models.Store.PaymentStatus.Paid ? "success" : "warning")">
                            @Model.PaymentStatus.ToString()
                        </span>
                    </p>
                    @if (!string.IsNullOrEmpty(Model.PaymentTransactionId))
                    {
                        <p class="mb-0"><small>Transaction: @Model.PaymentTransactionId</small></p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card { background-color: #1a1a1a !important; }
        .table-dark { background-color: #1a1a1a !important; }
    </style>
}

