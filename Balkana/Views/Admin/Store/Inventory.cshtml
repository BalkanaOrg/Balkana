@model List<Balkana.Data.Models.Store.ProductVariant>

@{
    ViewData["Title"] = "Inventory Management";
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-white">
            <i class="fas fa-warehouse"></i> Inventory - Low Stock Alerts
        </h2>
        <a asp-action="StoreProducts" class="btn btn-outline-light">
            <i class="fas fa-box"></i> Back to Products
        </a>
    </div>

    @if (Model.Any())
    {
        <div class="alert alert-warning">
            <i class="fas fa-exclamation-triangle"></i>
            <strong>@Model.Count</strong> variant(s) are running low on stock!
        </div>

        <div class="table-responsive">
            <table class="table table-dark table-striped table-hover">
                <thead class="table-warning text-dark">
                    <tr>
                        <th>Product</th>
                        <th>Variant</th>
                        <th>SKU</th>
                        <th>Current Stock</th>
                        <th>Threshold</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var variant in Model)
                    {
                        var percentage = (variant.StockQuantity / (double)variant.LowStockThreshold) * 100;
                        var statusClass = variant.StockQuantity == 0 ? "danger" : (percentage < 50 ? "danger" : "warning");
                        
                        <tr class="table-@statusClass">
                            <td>
                                <strong>@variant.Product.Name</strong>
                                @if (variant.Product.Team != null)
                                {
                                    <br><small class="text-muted">Team: @variant.Product.Team.Tag</small>
                                }
                            </td>
                            <td>@variant.Name</td>
                            <td><code>@variant.SKU</code></td>
                            <td>
                                <strong class="h5">@variant.StockQuantity</strong>
                            </td>
                            <td>@variant.LowStockThreshold</td>
                            <td>
                                @if (variant.StockQuantity == 0)
                                {
                                    <span class="badge bg-danger">OUT OF STOCK</span>
                                }
                                else if (percentage < 50)
                                {
                                    <span class="badge bg-danger">CRITICAL</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark">LOW</span>
                                }
                            </td>
                            <td>
                                <button class="btn btn-sm btn-primary" onclick="showRestockModal(@variant.Id, '@variant.Product.Name', '@variant.Name', @variant.StockQuantity)">
                                    <i class="fas fa-plus"></i> Restock
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-success">
            <i class="fas fa-check-circle"></i> All products are well-stocked! No low stock alerts.
        </div>
        
        <a asp-action="StoreProducts" class="btn btn-primary">
            <i class="fas fa-box"></i> View All Products
        </a>
    }
</div>

<!-- Restock Modal -->
<div class="modal fade" id="restockModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content bg-dark text-white">
            <div class="modal-header border-secondary">
                <h5 class="modal-title">Restock Product</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p><strong id="restockProductName"></strong></p>
                <p class="text-muted" id="restockVariantName"></p>
                <p>Current Stock: <strong id="restockCurrentStock"></strong></p>
                
                <div class="mb-3">
                    <label class="form-label">New Stock Quantity:</label>
                    <input type="number" class="form-control bg-dark text-white border-secondary" id="restockQuantity" min="0" />
                </div>
                
                <div class="mb-3">
                    <label class="form-label">Notes:</label>
                    <textarea class="form-control bg-dark text-white border-secondary" id="restockNotes" rows="2"></textarea>
                </div>
                
                <input type="hidden" id="restockVariantId" />
            </div>
            <div class="modal-footer border-secondary">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="submitRestock()">
                    <i class="fas fa-save"></i> Update Stock
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function showRestockModal(variantId, productName, variantName, currentStock) {
            document.getElementById('restockVariantId').value = variantId;
            document.getElementById('restockProductName').textContent = productName;
            document.getElementById('restockVariantName').textContent = variantName;
            document.getElementById('restockCurrentStock').textContent = currentStock;
