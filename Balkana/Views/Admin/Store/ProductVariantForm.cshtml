@model Balkana.Models.Store.AdminProductVariantFormViewModel

@{
    ViewData["Title"] = Model.Id > 0 ? "Edit Variant" : "Create Variant";
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="text-white">@ViewData["Title"]</h2>
            <p class="text-muted">Product: <strong>@Model.ProductName</strong></p>
        </div>
        <a asp-action="ProductVariants" asp-route-id="@Model.ProductId" class="btn btn-outline-light">
            <i class="fas fa-arrow-left"></i> Back to Variants
        </a>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card bg-dark border-primary">
                <div class="card-body">
                    <form asp-action="CreateProductVariant" asp-route-productId="@Model.ProductId" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="ProductId" />
                        <input type="hidden" asp-for="ProductName" />
                        
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label text-white"></label>
                            <input asp-for="Name" class="form-control bg-dark text-white border-secondary" placeholder="e.g., Medium / Black" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="SKU" class="form-label text-white"></label>
                            <input asp-for="SKU" class="form-control bg-dark text-white border-secondary" placeholder="e.g., BALKANA-TSH-M-BLK" />
                            <span asp-validation-for="SKU" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Size" class="form-label text-white"></label>
                                <input asp-for="Size" class="form-control bg-dark text-white border-secondary" placeholder="S, M, L, XL, etc." list="sizeOptions" />
                                <datalist id="sizeOptions">
                                    <option value="XS" />
                                    <option value="S" />
                                    <option value="M" />
                                    <option value="L" />
                                    <option value="XL" />
                                    <option value="XXL" />
                                </datalist>
                                <span asp-validation-for="Size" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Material" class="form-label text-white"></label>
                                <input asp-for="Material" class="form-control bg-dark text-white border-secondary" placeholder="Cotton, Polyester, etc." />
                                <span asp-validation-for="Material" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-8 mb-3">
                                <label asp-for="Color" class="form-label text-white"></label>
                                <input asp-for="Color" class="form-control bg-dark text-white border-secondary" placeholder="Black, White, Red, etc." list="colorOptions" />
                                <datalist id="colorOptions">
                                    <option value="Black" />
                                    <option value="White" />
                                    <option value="Red" />
                                    <option value="Blue" />
                                    <option value="Navy" />
                                    <option value="Gray" />
                                </datalist>
                                <span asp-validation-for="Color" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="ColorHex" class="form-label text-white"></label>
                                <input asp-for="ColorHex" class="form-control bg-dark text-white border-secondary" type="color" />
                                <span asp-validation-for="ColorHex" class="text-danger"></span>
                                <small class="text-muted">Color preview</small>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label asp-for="Price" class="form-label text-white"></label>
                                <div class="input-group">
                                    <input asp-for="Price" class="form-control bg-dark text-white border-secondary" type="number" step="0.01" />
                                    <span class="input-group-text bg-dark text-white border-secondary">BGN</span>
                                </div>
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="StockQuantity" class="form-label text-white"></label>
                                <input asp-for="StockQuantity" class="form-control bg-dark text-white border-secondary" type="number" />
                                <span asp-validation-for="StockQuantity" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="WeightGrams" class="form-label text-white"></label>
                                <div class="input-group">
                                    <input asp-for="WeightGrams" class="form-control bg-dark text-white border-secondary" type="number" />
                                    <span class="input-group-text bg-dark text-white border-secondary">g</span>
                                </div>
                                <span asp-validation-for="WeightGrams" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-8 mb-3">
                                <label asp-for="ImageUrl" class="form-label text-white"></label>
                                <input asp-for="ImageUrl" class="form-control bg-dark text-white border-secondary" placeholder="/uploads/products/variant.jpg" />
                                <span asp-validation-for="ImageUrl" class="text-danger"></span>
                                <small class="text-muted">Optional - uses product main image if empty</small>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="LowStockThreshold" class="form-label text-white"></label>
                                <input asp-for="LowStockThreshold" class="form-control bg-dark text-white border-secondary" type="number" value="10" />
                                <span asp-validation-for="LowStockThreshold" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <div class="form-check">
                                    <input asp-for="IsActive" class="form-check-input" type="checkbox" checked />
                                    <label asp-for="IsActive" class="form-check-label text-white"></label>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="DisplayOrder" class="form-label text-white"></label>
                                <input asp-for="DisplayOrder" class="form-control bg-dark text-white border-secondary" type="number" value="0" />
                            </div>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Save Variant
                            </button>
                            <a asp-action="ProductVariants" asp-route-id="@Model.ProductId" class="btn btn-secondary">
                                <i class="fas fa-times"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card bg-dark border-danger">
                <div class="card-header bg-danger text-white">
                    <h6 class="mb-0"><i class="fas fa-lightbulb"></i> Variant Tips</h6>
                </div>
                <div class="card-body text-white">
                    <p><strong>SKU Format:</strong></p>
                    <code class="text-warning">PRODUCT-SIZE-COLOR</code>
                    <p class="mt-2">Example: <code class="text-info">BALKANA-TSH-M-BLK</code></p>
                    
                    <hr class="border-secondary">
                    
                    <p><strong>Variant Name:</strong></p>
                    <p>Format: "<code>Size / Color</code>"</p>
                    <p>Example: "<code>Medium / Black</code>"</p>
                    
                    <hr class="border-secondary">
                    
                    <p><strong>Weight:</strong></p>
                    <ul class="small">
                        <li>T-Shirt: ~200g</li>
                        <li>Hoodie: ~500g</li>
                        <li>Mug: ~400g</li>
                        <li>Hat: ~100g</li>
                        <li>Stickers: ~50g</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@section Styles {
    <style>
        .card { background-color: #1a1a1a !important; }
        .form-control:focus, .form-select:focus {
            background-color: #2a2a2a;
            color: white !important;
            border-color: #0d6efd;
            box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
        }
        .form-check-input:checked {
            background-color: #0d6efd;
            border-color: #0d6efd;
        }
    </style>
}

