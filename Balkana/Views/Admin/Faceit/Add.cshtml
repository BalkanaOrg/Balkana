@model Balkana.Data.Models.FaceitClub

@{
    ViewData["Title"] = "Add FaceIt Club";
}

<h2>Add FaceIt Club</h2>

<form asp-action="AddFaceitClub" asp-controller="Admin" method="post">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="FaceitId" class="control-label"></label>
        <input asp-for="FaceitId" class="form-control" />
        <small class="form-text text-muted">Paste the FaceIt Hub ID here.</small>
        <span asp-validation-for="FaceitId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Save</button>
    <a asp-action="Index" asp-controller="Admin" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
