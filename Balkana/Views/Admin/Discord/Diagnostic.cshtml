@{
    ViewData["Title"] = "Discord Access Diagnostic";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card bg-dark text-white">
                <div class="card-header bg-gradient" style="background: linear-gradient(135deg, #1e40af, #dc2626);">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-bug me-2"></i>
                        Discord Access Diagnostic
                    </h3>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="card bg-dark border-secondary">
                                <div class="card-header">
                                    <h5 class="mb-0">
                                        <i class="fas fa-user me-2"></i>
                                        Authentication Status
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <div class="mb-3">
                                        <strong>Authenticated:</strong>
                                        @if (ViewBag.IsAuthenticated)
                                        {
                                            <span class="badge bg-success">
                                                <i class="fas fa-check me-1"></i>
                                                Yes
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">
                                                <i class="fas fa-times me-1"></i>
                                                No
                                            </span>
                                        }
                                    </div>
                                    
                                    <div class="mb-3">
                                        <strong>Username:</strong>
                                        <span class="text-info">@ViewBag.UserName</span>
                                    </div>
                                    
                                    <div class="mb-3">
                                        <strong>Roles:</strong>
                                        @if (ViewBag.Roles != null && ((List<string>)ViewBag.Roles).Any())
                                        {
                                            @foreach (var role in (List<string>)ViewBag.Roles)
                                            {
                                                <span class="badge bg-primary me-1">@role</span>
                                            }
                                        }
                                        else
                                        {
                                            <span class="text-muted">No roles assigned</span>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-6">
                            <div class="card bg-dark border-secondary">
                                <div class="card-header">
                                    <h5 class="mb-0">
                                        <i class="fas fa-shield-alt me-2"></i>
                                        Access Permissions
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <div class="mb-3">
                                        <strong>Administrator:</strong>
                                        @if (ViewBag.IsAdmin)
                                        {
                                            <span class="badge bg-success">
                                                <i class="fas fa-check me-1"></i>
                                                Yes
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">
                                                <i class="fas fa-times me-1"></i>
                                                No
                                            </span>
                                        }
                                    </div>
                                    
                                    <div class="mb-3">
                                        <strong>Moderator:</strong>
                                        @if (ViewBag.IsModerator)
                                        {
                                            <span class="badge bg-success">
                                                <i class="fas fa-check me-1"></i>
                                                Yes
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">
                                                <i class="fas fa-times me-1"></i>
                                                No
                                            </span>
                                        }
                                    </div>
                                    
                                    <div class="mb-3">
                                        <strong>Discord Access:</strong>
                                        @if (ViewBag.IsAdmin || ViewBag.IsModerator)
                                        {
                                            <span class="badge bg-success">
                                                <i class="fas fa-check me-1"></i>
                                                Allowed
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">
                                                <i class="fas fa-times me-1"></i>
                                                Denied
                                            </span>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row mt-4">
                        <div class="col-12">
                            <div class="card bg-dark border-secondary">
                                <div class="card-header">
                                    <h5 class="mb-0">
                                        <i class="fas fa-tools me-2"></i>
                                        Quick Actions
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <div class="d-grid gap-2 d-md-flex">
                                        <a href="@Url.Action("Discord", "Admin")" class="btn btn-outline-primary">
                                            <i class="fas fa-home me-2"></i>
                                            Discord Home
                                        </a>
                                        <a href="@Url.Action("DiscordCommands", "Admin")" class="btn btn-outline-secondary">
                                            <i class="fas fa-list me-2"></i>
                                            View Commands
                                        </a>
                                        <a href="@Url.Action("DiscordTest", "Admin")" class="btn btn-outline-success">
                                            <i class="fas fa-play me-2"></i>
                                            Test Commands
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    @if (!ViewBag.IsAuthenticated)
                    {
                        <div class="row mt-4">
                            <div class="col-12">
                                <div class="alert alert-warning">
                                    <h5><i class="fas fa-exclamation-triangle me-2"></i>Not Authenticated</h5>
                                    <p class="mb-0">You need to <a href="@Url.Action("Login", "Account")" class="alert-link">log in</a> to access Discord features.</p>
                                </div>
                            </div>
                        </div>
                    }
                    else if (!ViewBag.IsAdmin && !ViewBag.IsModerator)
                    {
                        <div class="row mt-4">
                            <div class="col-12">
                                <div class="alert alert-danger">
                                    <h5><i class="fas fa-ban me-2"></i>Insufficient Permissions</h5>
                                    <p class="mb-0">You need Administrator or Moderator role to access Discord features. Contact an administrator to assign you the proper role.</p>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="row mt-4">
                            <div class="col-12">
                                <div class="alert alert-success">
                                    <h5><i class="fas fa-check-circle me-2"></i>Access Granted</h5>
                                    <p class="mb-0">You have the necessary permissions to access all Discord features.</p>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 10px;
        box-shadow: 0 4px 16px rgba(0,0,0,0.3);
    }
    
    .card-header {
        border-radius: 10px 10px 0 0 !important;
    }
    
    .btn {
        border-radius: 8px;
        font-weight: 500;
    }
    
    .badge {
        font-size: 0.9em;
    }
    
    .alert {
        border-radius: 8px;
    }
</style>
