@model List<PlayerStatsResponseModel>

@section Styles {
    <link rel="stylesheet" href="~/css/stats.css" asp-append-version="true" />
    <style>
        .player-header {
            background: linear-gradient(135deg, rgba(0, 123, 255, 0.1), rgba(220, 53, 69, 0.1));
            border-radius: 15px;
            padding: 30px;
            margin-bottom: 30px;
            border: 1px solid rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
        }

        .player-info {
            display: flex;
            align-items: center;
            gap: 20px;
        }

        .player-avatar {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            background: linear-gradient(135deg, #007bff, #dc3545);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2rem;
            color: white;
            font-weight: 700;
        }

        .player-details h1 {
            color: white;
            margin: 0;
            font-size: 2.5rem;
            font-weight: 700;
        }

        .player-nickname {
            color: rgba(255, 255, 255, 0.8);
            font-size: 1.2rem;
            margin: 5px 0;
        }

        .player-meta {
            color: rgba(255, 255, 255, 0.6);
            font-size: 1rem;
        }

        .stats-tabs {
            display: flex;
            gap: 10px;
            margin-bottom: 30px;
        }

        .tab-btn {
            padding: 12px 24px;
            border: 2px solid transparent;
            border-radius: 8px;
            background: rgba(255, 255, 255, 0.1);
            color: white;
            text-decoration: none;
            font-weight: 600;
            transition: all 0.3s ease;
            cursor: pointer;
        }

        .tab-btn:hover {
            background: rgba(255, 255, 255, 0.2);
            border-color: rgba(255, 255, 255, 0.3);
            color: white;
            text-decoration: none;
        }

        .tab-btn.active {
            background: linear-gradient(135deg, #007bff, #dc3545);
            border-color: transparent;
        }

        .stats-section {
            background: rgba(255, 255, 255, 0.05);
            border-radius: 15px;
            padding: 30px;
            margin-bottom: 30px;
            border: 1px solid rgba(255, 255, 255, 0.1);
        }

        .stats-section h3 {
            color: white;
            margin-bottom: 20px;
            font-size: 1.5rem;
            font-weight: 600;
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 15px;
        }

        .stat-item {
            background: rgba(255, 255, 255, 0.05);
            border-radius: 8px;
            padding: 15px;
            border: 1px solid rgba(255, 255, 255, 0.1);
            text-align: center;
        }

        .stat-label {
            color: rgba(255, 255, 255, 0.7);
            font-size: 0.9rem;
            margin-bottom: 5px;
        }

        .stat-value {
            color: white;
            font-size: 1.5rem;
            font-weight: 700;
        }

        .advanced-stats {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
            gap: 10px;
        }

        .advanced-stat {
            background: rgba(255, 255, 255, 0.03);
            border-radius: 6px;
            padding: 10px;
            text-align: center;
            border: 1px solid rgba(255, 255, 255, 0.05);
        }

        .advanced-stat-label {
            color: rgba(255, 255, 255, 0.6);
            font-size: 0.8rem;
            margin-bottom: 3px;
        }

        .advanced-stat-value {
            color: white;
            font-size: 1.1rem;
            font-weight: 600;
        }

        .no-data {
            text-align: center;
            color: rgba(255, 255, 255, 0.6);
            padding: 40px;
            font-size: 1.1rem;
        }
    </style>
}

@if (Model.Any())
{
    var player = Model.First();
    <div class="player-header">
        <div class="player-info">
            <div class="player-avatar">
                @player.PlayerName.Substring(0, 1).ToUpper()
            </div>
            <div class="player-details">
                <h1>@player.PlayerName</h1>
                <div class="player-nickname">@player.PlayerNickname</div>
                <div class="player-meta">
                    @player.TotalMatches matches â€¢ 
                    @(player.FirstMatchDate?.ToString("MMM yyyy") ?? "N/A") - @(player.LastMatchDate?.ToString("MMM yyyy") ?? "N/A")
                </div>
            </div>
        </div>
    </div>

    <div class="stats-tabs">
        @if (Model.Any(p => p.CS2Stats != null))
        {
            <button class="tab-btn active" onclick="showTab('cs2')">
                <i class="fi fi-rr-crosshair"></i>
                CS2 Statistics
            </button>
        }
        @if (Model.Any(p => p.LoLStats != null))
        {
            <button class="tab-btn @(Model.All(p => p.CS2Stats == null) ? "active" : "")" onclick="showTab('lol')">
                <i class="fi fi-rr-crown"></i>
                LoL Statistics
            </button>
        }
    </div>

    @foreach (var playerStats in Model)
    {
        @if (playerStats.CS2Stats != null)
        {
            <div id="cs2-stats" class="stats-section @(Model.Any(p => p.LoLStats != null) ? "" : "active")">
                <h3><i class="fi fi-rr-crosshair"></i> CS2 Statistics (@playerStats.Provider)</h3>
                
                <div class="stats-grid">
                    <div class="stat-item">
                        <div class="stat-label">K/D Ratio</div>
                        <div class="stat-value">@playerStats.CS2Stats.KDRatio.ToString("F2")</div>
                    </div>
                    <div class="stat-item">
                        <div class="stat-label">ADR</div>
                        <div class="stat-value">@playerStats.CS2Stats.ADR.ToString("F1")</div>
                    </div>
                    <div class="stat-item">
                        <div class="stat-label">HLTV Rating</div>
                        <div class="stat-value">@playerStats.CS2Stats.HLTVRating.ToString("F2")</div>
                    </div>
                    <div class="stat-item">
                        <div class="stat-label">KAST</div>
                        <div class="stat-value">@playerStats.CS2Stats.KAST.ToString("F1")%</div>
                    </div>
                    <div class="stat-item">
                        <div class="stat-label">Kills (@playerStats.CS2Stats.Headshots HS)</div>
                        <div class="stat-value">@playerStats.CS2Stats.TotalKills</div>
                    </div>
                    <div class="stat-item">
                        <div class="stat-label">Deaths</div>
                        <div class="stat-value">@playerStats.CS2Stats.TotalDeaths</div>
                    </div>
                    <div class="stat-item">
                        <div class="stat-label">Assists</div>
                        <div class="stat-value">@playerStats.CS2Stats.TotalAssists</div>
                    </div>
                    <div class="stat-item">
                        <div class="stat-label">Damage</div>
                        <div class="stat-value">@playerStats.CS2Stats.TotalDamage.ToString("N0")</div>
                    </div>
                </div>

                <h4 style="color: white; margin: 30px 0 15px 0;">Multi-Kill Statistics</h4>
                <div class="advanced-stats">
                    <div class="advanced-stat">
                        <div class="advanced-stat-label">5K Rounds</div>
                        <div class="advanced-stat-value">@playerStats.CS2Stats._5k</div>
                    </div>
                    <div class="advanced-stat">
                        <div class="advanced-stat-label">4K Rounds</div>
                        <div class="advanced-stat-value">@playerStats.CS2Stats._4k</div>
                    </div>
                    <div class="advanced-stat">
                        <div class="advanced-stat-label">3K Rounds</div>
                        <div class="advanced-stat-value">@playerStats.CS2Stats._3k</div>
                    </div>
                    <div class="advanced-stat">
                        <div class="advanced-stat-label">2K Rounds</div>
                        <div class="advanced-stat-value">@playerStats.CS2Stats._2k</div>
                    </div>
                    <div class="advanced-stat">
                        <div class="advanced-stat-label">1K Rounds</div>
                        <div class="advanced-stat-value">@playerStats.CS2Stats._1k</div>
                    </div>
                </div>

                <h4 style="color: white; margin: 30px 0 15px 0;">Clutch Statistics</h4>
                <div class="advanced-stats">
                    <div class="advanced-stat">
                        <div class="advanced-stat-label">1v5</div>
                        <div class="advanced-stat-value">@playerStats.CS2Stats._1v5</div>
                    </div>
                    <div class="advanced-stat">
                        <div class="advanced-stat-label">1v4</div>
                        <div class="advanced-stat-value">@playerStats.CS2Stats._1v4</div>
                    </div>
                    <div class="advanced-stat">
                        <div class="advanced-stat-label">1v3</div>
                        <div class="advanced-stat-value">@playerStats.CS2Stats._1v3</div>
                    </div>
                    <div class="advanced-stat">
                        <div class="advanced-stat-label">1v2</div>
                        <div class="advanced-stat-value">@playerStats.CS2Stats._1v2</div>
                    </div>
                    <div class="advanced-stat">
                        <div class="advanced-stat-label">1v1</div>
                        <div class="advanced-stat-value">@playerStats.CS2Stats._1v1</div>
                    </div>
                </div>

                <h4 style="color: white; margin: 30px 0 15px 0;">Weapon Statistics</h4>
                <div class="advanced-stats">
                    <div class="advanced-stat">
                        <div class="advanced-stat-label">Sniper Kills</div>
                        <div class="advanced-stat-value">@playerStats.CS2Stats.SniperKills</div>
                    </div>
                    <div class="advanced-stat">
                        <div class="advanced-stat-label">Pistol Kills</div>
                        <div class="advanced-stat-value">@playerStats.CS2Stats.PistolKills</div>
                    </div>
                    <div class="advanced-stat">
                        <div class="advanced-stat-label">Knife Kills</div>
                        <div class="advanced-stat-value">@playerStats.CS2Stats.KnifeKills</div>
                    </div>
                    <div class="advanced-stat">
                        <div class="advanced-stat-label">Wallbang Kills</div>
                        <div class="advanced-stat-value">@playerStats.CS2Stats.WallbangKills</div>
                    </div>
                    <div class="advanced-stat">
                        <div class="advanced-stat-label">Collateral Kills</div>
                        <div class="advanced-stat-value">@playerStats.CS2Stats.CollateralKills</div>
                    </div>
                    <div class="advanced-stat">
                        <div class="advanced-stat-label">No Scope Kills</div>
                        <div class="advanced-stat-value">@playerStats.CS2Stats.NoScopeKills</div>
                    </div>
                </div>
            </div>
        }

        @if (playerStats.LoLStats != null)
        {
            <div id="lol-stats" class="stats-section @(Model.All(p => p.CS2Stats == null) ? "active" : "")">
                <h3><i class="fi fi-rr-crown"></i> LoL Statistics (@playerStats.Provider)</h3>
                
                <div class="stats-grid">
                    <div class="stat-item">
                        <div class="stat-label">K/D Ratio</div>
                        <div class="stat-value">@playerStats.LoLStats.KDRatio.ToString("F2")</div>
                    </div>
                    <div class="stat-item">
                        <div class="stat-label">KPA Ratio</div>
                        <div class="stat-value">@playerStats.LoLStats.KPARatio.ToString("F2")</div>
                    </div>
                    <div class="stat-item">
                        <div class="stat-label">Gold Per Minute</div>
                        <div class="stat-value">@playerStats.LoLStats.GoldPerMinute.ToString("F1")</div>
                    </div>
                    <div class="stat-item">
                        <div class="stat-label">CS Per Minute</div>
                        <div class="stat-value">@playerStats.LoLStats.CSPerMinute.ToString("F1")</div>
                    </div>
                    <div class="stat-item">
                        <div class="stat-label">Kills</div>
                        <div class="stat-value">@playerStats.LoLStats.TotalKills</div>
                    </div>
                    <div class="stat-item">
                        <div class="stat-label">Deaths</div>
                        <div class="stat-value">@playerStats.LoLStats.TotalDeaths</div>
                    </div>
                    <div class="stat-item">
                        <div class="stat-label">Assists</div>
                        <div class="stat-value">@playerStats.LoLStats.TotalAssists</div>
                    </div>
                    <div class="stat-item">
                        <div class="stat-label">Gold Earned</div>
                        <div class="stat-value">@playerStats.LoLStats.TotalGoldEarned.ToString("N0")</div>
                    </div>
                </div>
            </div>
        }
    }
}
else
{
    <div class="no-data">
        <i class="fi fi-rr-user" style="font-size: 3rem; margin-bottom: 15px; display: block;"></i>
        No player statistics found.
    </div>
}

@section Scripts {
    <script>
        function showTab(tabName) {
            // Hide all stats sections
            document.querySelectorAll('.stats-section').forEach(section => {
                section.classList.remove('active');
            });
            
            // Remove active class from all tabs
            document.querySelectorAll('.tab-btn').forEach(btn => {
                btn.classList.remove('active');
            });
            
            // Show selected tab
            document.getElementById(tabName + '-stats').classList.add('active');
            
            // Add active class to clicked tab
            event.target.classList.add('active');
        }
    </script>
}