@model TeamStatsViewModel

@section Styles {
    <link rel="stylesheet" href="~/css/stats.css" asp-append-version="true" />
    <style>
        .team-header {
            background: linear-gradient(135deg, rgba(0, 123, 255, 0.1), rgba(220, 53, 69, 0.1));
            border-radius: 15px;
            padding: 30px;
            margin-bottom: 30px;
            border: 1px solid rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
        }

        .team-info {
            display: flex;
            align-items: center;
            gap: 20px;
            margin-bottom: 20px;
        }

        .team-logo {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            object-fit: cover;
            border: 3px solid rgba(255, 255, 255, 0.2);
        }

        .team-details h1 {
            color: white;
            margin: 0;
            font-size: 2.5rem;
            font-weight: 700;
        }

        .team-tag {
            color: rgba(255, 255, 255, 0.8);
            font-size: 1.2rem;
            margin: 5px 0;
        }

        .team-game {
            color: rgba(255, 255, 255, 0.6);
            font-size: 1rem;
        }

        .roster-controls {
            display: flex;
            gap: 15px;
            margin-bottom: 20px;
        }

        .roster-btn {
            padding: 12px 24px;
            border: 2px solid transparent;
            border-radius: 8px;
            background: rgba(255, 255, 255, 0.1);
            color: white;
            text-decoration: none;
            font-weight: 600;
            transition: all 0.3s ease;
            cursor: pointer;
        }

        .roster-btn:hover {
            background: rgba(255, 255, 255, 0.2);
            border-color: rgba(255, 255, 255, 0.3);
            color: white;
            text-decoration: none;
        }

        .roster-btn.active {
            background: linear-gradient(135deg, #007bff, #dc3545);
            border-color: transparent;
        }

        .team-summary {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }

        .summary-card {
            background: rgba(255, 255, 255, 0.05);
            border-radius: 10px;
            padding: 20px;
            text-align: center;
            border: 1px solid rgba(255, 255, 255, 0.1);
        }

        .summary-value {
            font-size: 2rem;
            font-weight: 700;
            color: white;
            margin-bottom: 5px;
        }

        .summary-label {
            color: rgba(255, 255, 255, 0.7);
            font-size: 0.9rem;
        }

        .stats-section {
            background: rgba(255, 255, 255, 0.05);
            border-radius: 15px;
            padding: 30px;
            margin-bottom: 30px;
            border: 1px solid rgba(255, 255, 255, 0.1);
        }

        .stats-section h3 {
            color: white;
            margin-bottom: 20px;
            font-size: 1.5rem;
            font-weight: 600;
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
        }

        .stat-item {
            background: rgba(255, 255, 255, 0.05);
            border-radius: 8px;
            padding: 15px;
            border: 1px solid rgba(255, 255, 255, 0.1);
        }

        .stat-label {
            color: rgba(255, 255, 255, 0.7);
            font-size: 0.9rem;
            margin-bottom: 5px;
        }

        .stat-value {
            color: white;
            font-size: 1.2rem;
            font-weight: 600;
        }

        .players-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 20px;
        }

        .player-card {
            background: rgba(255, 255, 255, 0.05);
            border-radius: 10px;
            padding: 20px;
            border: 1px solid rgba(255, 255, 255, 0.1);
            transition: all 0.3s ease;
        }

        .player-card:hover {
            background: rgba(255, 255, 255, 0.08);
            border-color: rgba(255, 255, 255, 0.2);
        }

        .player-header {
            display: flex;
            align-items: center;
            gap: 15px;
            margin-bottom: 15px;
        }

        .player-name {
            color: white;
            font-size: 1.2rem;
            font-weight: 600;
            margin: 0;
        }

        .player-nickname {
            color: rgba(255, 255, 255, 0.7);
            font-size: 0.9rem;
        }

        .player-stats {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 10px;
        }

        .no-data {
            text-align: center;
            color: rgba(255, 255, 255, 0.6);
            padding: 40px;
            font-size: 1.1rem;
        }
    </style>
}

<div class="team-header">
    <div class="team-info">
        <img src="@Model.LogoUrl" alt="@Model.TeamName" class="team-logo" />
        <div class="team-details">
            <h1>@Model.TeamName</h1>
            <div class="team-tag">@Model.TeamTag</div>
            <div class="team-game">@Model.GameName</div>
        </div>
    </div>

    <div class="roster-controls">
        <a href="@Url.Action("Team", "Stats", new { teamId = Model.TeamId, rosterType = "CurrentRoster" })" 
           class="roster-btn @(Model.RosterType == TeamRosterType.CurrentRoster ? "active" : "")">
            <i class="fi fi-rr-users"></i>
            Current Roster (Active/Substitute/EmergencySubstitute)
        </a>
        <a href="@Url.Action("Team", "Stats", new { teamId = Model.TeamId, rosterType = "EveryPlayer" })" 
           class="roster-btn @(Model.RosterType == TeamRosterType.EveryPlayer ? "active" : "")">
            <i class="fi fi-rr-user-add"></i>
            Every Player (All Time)
        </a>
    </div>

    <div class="team-summary">
        <div class="summary-card">
            <div class="summary-value">@Model.TotalPlayers</div>
            <div class="summary-label">Players</div>
        </div>
        <div class="summary-card">
            <div class="summary-value">@Model.TotalMatches</div>
            <div class="summary-label">Total Matches</div>
        </div>
        <div class="summary-card">
            <div class="summary-value">@(Model.FirstMatchDate?.ToString("MMM yyyy") ?? "N/A")</div>
            <div class="summary-label">First Match</div>
        </div>
        <div class="summary-card">
            <div class="summary-value">@(Model.LastMatchDate?.ToString("MMM yyyy") ?? "N/A")</div>
            <div class="summary-label">Last Match</div>
        </div>
    </div>
</div>

@if (Model.TeamStats?.CS2Stats != null)
{
    <div class="stats-section">
        <h3><i class="fi fi-rr-crosshair"></i> Team CS2 Statistics</h3>
        <div class="stats-grid">
            <div class="stat-item">
                <div class="stat-label">Team K/D Ratio</div>
                <div class="stat-value">@Model.TeamStats.CS2Stats.TeamKDRatio.ToString("F2")</div>
            </div>
            <div class="stat-item">
                <div class="stat-label">Team ADR</div>
                <div class="stat-value">@Model.TeamStats.CS2Stats.TeamADR.ToString("F1")</div>
            </div>
            <div class="stat-item">
                <div class="stat-label">Team HLTV Rating</div>
                <div class="stat-value">@Model.TeamStats.CS2Stats.TeamHLTVRating.ToString("F2")</div>
            </div>
            <div class="stat-item">
                <div class="stat-label">Team KAST</div>
                <div class="stat-value">@Model.TeamStats.CS2Stats.TeamKAST.ToString("F1")%</div>
            </div>
            <div class="stat-item">
                <div class="stat-label">5K Rounds</div>
                <div class="stat-value">@Model.TeamStats.CS2Stats.Team_5k</div>
            </div>
            <div class="stat-item">
                <div class="stat-label">4K Rounds</div>
                <div class="stat-value">@Model.TeamStats.CS2Stats.Team_4k</div>
            </div>
            <div class="stat-item">
                <div class="stat-label">3K Rounds</div>
                <div class="stat-value">@Model.TeamStats.CS2Stats.Team_3k</div>
            </div>
            <div class="stat-item">
                <div class="stat-label">2K Rounds</div>
                <div class="stat-value">@Model.TeamStats.CS2Stats.Team_2k</div>
            </div>
            <div class="stat-item">
                <div class="stat-label">1K Rounds</div>
                <div class="stat-value">@Model.TeamStats.CS2Stats.Team_1k</div>
            </div>
            <div class="stat-item">
                <div class="stat-label">1v5 Clutches</div>
                <div class="stat-value">@Model.TeamStats.CS2Stats.Team_1v5</div>
            </div>
            <div class="stat-item">
                <div class="stat-label">1v4 Clutches</div>
                <div class="stat-value">@Model.TeamStats.CS2Stats.Team_1v4</div>
            </div>
            <div class="stat-item">
                <div class="stat-label">1v3 Clutches</div>
                <div class="stat-value">@Model.TeamStats.CS2Stats.Team_1v3</div>
            </div>
        </div>
    </div>
}

@if (Model.TeamStats?.LoLStats != null)
{
    <div class="stats-section">
        <h3><i class="fi fi-rr-crown"></i> Team LoL Statistics</h3>
        <div class="stats-grid">
            <div class="stat-item">
                <div class="stat-label">Team K/D Ratio</div>
                <div class="stat-value">@Model.TeamStats.LoLStats.TeamKDRatio.ToString("F2")</div>
            </div>
            <div class="stat-item">
                <div class="stat-label">Team KPA Ratio</div>
                <div class="stat-value">@Model.TeamStats.LoLStats.TeamKPARatio.ToString("F2")</div>
            </div>
            <div class="stat-item">
                <div class="stat-label">Team GPM</div>
                <div class="stat-value">@Model.TeamStats.LoLStats.TeamGoldPerMinute.ToString("F1")</div>
            </div>
            <div class="stat-item">
                <div class="stat-label">Team CS/M</div>
                <div class="stat-value">@Model.TeamStats.LoLStats.TeamCSPerMinute.ToString("F1")</div>
            </div>
        </div>
    </div>
}

<div class="stats-section">
    <h3><i class="fi fi-rr-user"></i> Player Statistics</h3>
    
    @if (Model.PlayerStats.Any())
    {
        <div class="players-grid">
            @foreach (var player in Model.PlayerStats)
            {
                <div class="player-card">
                    <div class="player-header">
                        <div>
                            <h4 class="player-name">@player.PlayerName</h4>
                            <div class="player-nickname">@player.PlayerNickname</div>
                        </div>
                    </div>
                    
                    <div class="player-stats">
                        <div class="stat-item">
                            <div class="stat-label">Matches</div>
                            <div class="stat-value">@player.TotalMatches</div>
                        </div>
                        <div class="stat-item">
                            <div class="stat-label">Provider</div>
                            <div class="stat-value">@player.Provider</div>
                        </div>
                        
                        @if (player.CS2Stats != null)
                        {
                            <div class="stat-item">
                                <div class="stat-label">K/D Ratio</div>
                                <div class="stat-value">@player.CS2Stats.KDRatio.ToString("F2")</div>
                            </div>
                            <div class="stat-item">
                                <div class="stat-label">ADR</div>
                                <div class="stat-value">@player.CS2Stats.ADR.ToString("F1")</div>
                            </div>
                            <div class="stat-item">
                                <div class="stat-label">Kills (@player.CS2Stats.Headshots HS)</div>
                                <div class="stat-value">@player.CS2Stats.TotalKills</div>
                            </div>
                            <div class="stat-item">
                                <div class="stat-label">Deaths</div>
                                <div class="stat-value">@player.CS2Stats.TotalDeaths</div>
                            </div>
                            <div class="stat-item">
                                <div class="stat-label">5K Rounds</div>
                                <div class="stat-value">@player.CS2Stats._5k</div>
                            </div>
                            <div class="stat-item">
                                <div class="stat-label">4K Rounds</div>
                                <div class="stat-value">@player.CS2Stats._4k</div>
                            </div>
                            <div class="stat-item">
                                <div class="stat-label">3K Rounds</div>
                                <div class="stat-value">@player.CS2Stats._3k</div>
                            </div>
                            <div class="stat-item">
                                <div class="stat-label">2K Rounds</div>
                                <div class="stat-value">@player.CS2Stats._2k</div>
                            </div>
                        }
                        
                        @if (player.LoLStats != null)
                        {
                            <div class="stat-item">
                                <div class="stat-label">K/D Ratio</div>
                                <div class="stat-value">@player.LoLStats.KDRatio.ToString("F2")</div>
                            </div>
                            <div class="stat-item">
                                <div class="stat-label">KPA Ratio</div>
                                <div class="stat-value">@player.LoLStats.KPARatio.ToString("F2")</div>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="no-data">
            <i class="fi fi-rr-user" style="font-size: 3rem; margin-bottom: 15px; display: block;"></i>
            No player statistics found for this team.
        </div>
    }
</div>
